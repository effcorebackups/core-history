data_validators
- attributes|data_validator
    id: attributes
    examples
    - valid_dataset
        settings
        - string: text
        - string_empty: 
        - string_true|_string_true
        - string_false|_string_false
        - integer: 123
        - float: 0.000001
        - boolean_true: true
        - boolean_false: false
        - null: null
        - array_empty|_empty_array
        - array
          - item_string: text
          - item_string_empty: 
          - item_string_true|_string_true
          - item_string_false|_string_false
          - item_integer: 123
          - item_float: 0.000001
        - object_text|text
            custom_preperty: null
            text: some text
            is_apply_translation: true
            is_apply_tokens: false
        - object_text_simple|text_simple
            custom_preperty: null
            text: some text
            delimiter|_string_nl
            weight: 0
    # ◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦
    - invalid_dataset
        settings_other_1
        - 0
          - 0
            - 0: some value 1
        settings_other_2
        - 0
          - 0
            - 0: some value 2
        settings
        - array
          - item_boolean_true: true
          - item_boolean_false: false
          - item_null: null
          - item_array_empty|_empty_array
          - item_array_nested
            - 0: nested string
        - object_text|text
            is_apply_translation: null
            is_apply_tokens: null
        - object_text_simple|text_simple
            text: null
            delimiter: null
            weight: null
        - object_empty
        - object
            property_1: value 1
            property_2: value 2
            property_3: value 3
        - object_nested
            0
              0
                0: nested value
        settings_other_3
        - 0
          - 0
            - 0: some value 3
        settings_other_4
        - 0
          - 0
            - 0: some value 4
    # ◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦◦
    scenario
    - check-settings+settings-*|step_validate
        check: current
        where: dpath
        match: %^settings(/.+|)$%
        on_failure
        - error_register|step_validate_error_register
            break: nested
            message|text_multiline
              text
              - 0: Item "%%_dpath_value" is positioned outside the allowed boundaries!
              - 1: Each item must be contained in the "%%_root" array.
              args
              - root: settings
        on_success
      # check "settings:array"
        - check-settings|step_validate
            check: current
            where: dpath
            match: settings
            on_success
            - check_type|step_validate
                check: current
                where: type
                match: array
                on_failure
              # when "settings:__INVALID__TYPE__"
                - error_register|step_validate_error_register
                    break: nested
                    message|text
                      text: Item "%%_dpath_value" must be of type "%%_type"!
                      args
                      - type: array
            on_failure
          # check "settings/*"
            - check-settings-*|step_validate
                check: current
                where: dpath
                match: %^settings/.+$%
                on_success
              # check "settings/item"
                - check-settings-item|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)$%
                    on_success
                    - check_type|step_validate
                        check: current
                        where: type
                        match: %^(string|integer|double|boolean|null|array|object:text|object:text_simple)$%
                        on_failure
                      # when "settings/item:__INVALID__TYPE__"
                        - error_register|step_validate_error_register
                            message|text
                              text: Item "%%_dpath_value" must be one of the following types: %%_types!
                              args
                              - types: string, integer, double, boolean, null, array, object:text, object:text_simple
              # check "settings/item:array/item"
                - check-settings-item:array-item|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/[^/]+)$%
                    on_success
                    - check_if_parrent_is_array|step_validate
                        check: parent_+2
                        where: type
                        match: array
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: %^(string|integer|double)$%
                            on_failure
                          # when "settings/item:array/item:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: string, integer, double
              # check "settings/item:object:text/is_apply_translation:boolean"
                - check-settings-item:object:text-is_apply_translation:boolean|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/is_apply_translation)$%
                    on_success
                    - check_if_parrent_is_object_text|step_validate
                        check: parent_+2
                        where: type
                        match: object:text
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: boolean
                            on_failure
                          # when "settings/item:object:text/is_apply_translation:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: boolean
              # check "settings/item:object:text/is_apply_tokens:boolean"
                - check-settings-item:object:text-is_apply_tokens:boolean|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/is_apply_tokens)$%
                    on_success
                    - check_if_parrent_is_object_text|step_validate
                        check: parent_+2
                        where: type
                        match: object:text
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: boolean
                            on_failure
                          # when "settings/item:object:text/is_apply_tokens:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: boolean
              # check "settings/item:object:text_simple/weight:integer"
                - check-settings-item:object:text_simple-weight:integer|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/weight)$%
                    on_success
                    - check_if_parrent_is_object_text_simple|step_validate
                        check: parent_+2
                        where: type
                        match: object:text_simple
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: integer
                            on_failure
                          # when "settings/item:object:text_simple/weight:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: integer
              # check "settings/item:object:text_simple/delimiter:string"
                - check-settings-item:object:text_simple-delimiter:string|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/delimiter)$%
                    on_success
                    - check_if_parrent_is_object_text_simple|step_validate
                        check: parent_+2
                        where: type
                        match: object:text_simple
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: string
                            on_failure
                          # when "settings/item:object:text_simple/delimiter:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: string
              # check "settings/item:object:text_simple/text:string"
                - check-settings-item:object:text_simple-text:string|step_validate
                    check: current
                    where: dpath
                    match: %^settings(/[^/]+)(/text)$%
                    on_success
                    - check_if_parrent_is_object_text_simple|step_validate
                        check: parent_+2
                        where: type
                        match: object:text_simple
                        on_success
                        - check_type|step_validate
                            check: current
                            where: type
                            match: string
                            on_failure
                          # when "settings/item:object:text_simple/text:__INVALID__TYPE__"
                            - error_register|step_validate_error_register
                                message|text
                                  text: Item "%%_dpath_value" must be one of the following types: %%_types!
                                  args
                                  - types: string