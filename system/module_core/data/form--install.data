forms
- install|form
    attributes
    - id: install
    - method: post
    - novalidate: true
    children
    - license_agreement|group_license_agreement
        state: closed
    - storage|fieldset
        title: Storage
        state: closed
        children
      # driver
        - is_mysql|field_radiobutton
            title: MySQL
            attributes
            - data-is-before_container: true
            element_attributes
            - name: driver
            - value: mysql
      # mysql params
        - mysql|fieldset
            children
          # host name
            - host|field_text
                title: Hostname
                element_attributes
                - name: host
                - value: [::1]
                - minlength: 1
                - maxlength: 253
                - pattern: ^[a-zA-Z0-9_\-\:\.\[\]/]+$
          # port
            - port|field_number
                title: Port
                element_attributes
                - name: port
                - value: 3306
                - min: 1024
                - max: 49150
          # login
            - storage_login|field_text
                title: User name
                element_attributes
                - name: storage_login
                - value: root
                - minlength: 1
                - maxlength: 64
                - pattern: ^[a-zA-Z0-9_\-]+$
          # password
            - password|field_password
                element_attributes
                - name: storage_password
                - minlength: false
                - required: false
          # database name
            - database_name|field_text
                title: Database name
                element_attributes
                - name: database_name
                - value: effcore
                - minlength: 1
                - maxlength: 128
                - pattern: ^[a-zA-Z0-9_\-]+$
      # driver
        - is_sqlite|field_radiobutton
            title: SQLite
            attributes
            - data-is-before_container: true
            element_attributes
            - name: driver
            - value: sqlite
      # sqlite params
        - sqlite|fieldset
            children
          # storage file name
            - file_name|field_text
                title: File name
                element_attributes
                - name: file_name
                - value: data.sqlite
                - minlength: 1
                - maxlength: 255
                - pattern: ^[a-zA-Z0-9_\-\.]+$
                - readonly: true
      # shared params
        - params|fieldset
            title: Shared params
            children
          # table prefix
            - table_prefix|field_text
                title: Table prefix
                element_attributes
                - name: table_prefix
                - maxlength: 10
                - pattern: ^[a-zA-Z0-9_\-]+$
                - required: false
    - user|fieldset
        title: User
        state: closed
        children
      # email
        - email|field_email
            element_attributes
            - value: admin@example.com
      # password
        - password|field_password
      # timezone
        - timezone|field_timezone
            element_attributes
            - data-source: uagent-timezone
    - button_install|button
        title: install
        attributes
        - value: install