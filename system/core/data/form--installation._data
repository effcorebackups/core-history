forms
- install|form
    attributes
    - id: install
    - novalidate: novalidate
    - method: post
    children
    - storage|container
        tag_name: fieldset
        title: Storage params
        title_tag_name: legend
        children
      # driver
        - is_mysql|form_field
            title: MySQL
            title_position: bottom
            attributes
            - class
              - boxes: boxes
              - radioboxes: radioboxes
              - before-container: before-container
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: radio
                - name: driver
                - value: mysql
      # mysql
        - mysql|container
            tag_name: fieldset
            children
          # storage id (database name)
            - storage_id|form_field
                title: Storage ID
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: storage_id
                    - required: required
                    - value: main
                    - minlength: 1
                    - maxlength: 128
                    - pattern: [a-zA-Z0-9-_]+
          # host name
            - host_name|form_field
                title: Host name
                description|text
                  text: Allowable characters: %%_chars. Examples: %%_examples.
                  args
                  - examples: 127.0.0.1, example.com
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", "."
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: host_name
                    - required: required
                    - value: 127.0.0.1
                    - minlength: 1
                    - maxlength: 253
                    - pattern: [a-zA-Z0-9-_.]+
          # port
            - port|form_field
                title: Port
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: number
                    - name: port
                    - required: required
                    - value: 3306
                    - min: 1024
                    - max: 49150
          # user name
            - user_name|form_field
                title: User name
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: user_name
                    - required: required
                    - value: root
                    - minlength: 1
                    - maxlength: 64
                    - pattern: [a-zA-Z0-9-_]+
          # password
            - password|form_field
                title: Password
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: password
                    - name: password
                    - maxlength: 255
                    - autocomplete: off
      # driver
        - is_sqlite|form_field
            title: SQLite
            title_position: bottom
            attributes
            - class
              - boxes: boxes
              - radioboxes: radioboxes
              - before-container: before-container
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: radio
                - name: driver
                - value: sqlite
      # sqlite
        - sqlite|container
            tag_name: fieldset
            children
          # storage file path
            - file_name|form_field
                title: Path to file
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", ".", "/"
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: file_name
                    - required: required
                    - value: data.sqlite
                    - minlength: 1
                    - maxlength: 255
                    - pattern: [a-zA-Z0-9-_./]+
                    - readonly: readonly
      # shared params
        - params|container
            children
          # table prefix
            - table_prefix|form_field
                title: Table prefix
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: table_prefix
                    - maxlength: 10
                    - pattern: [a-zA-Z0-9-_]+
    - license_agreement|form_container_license_agreement
    - button_install|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: install
        children
        - label|text
            text: install
    - button_to_front|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: to_front
        children
        - label|text
            text: to front page