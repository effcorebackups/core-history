selections
- social_networks_classic|selection
    id: social_networks_classic
    title: Social networks
    template: content
    decorator_params
    - view_type: template
    - template_row: logotype
    - template_row_mapping
      - title: logotype.title
      - url: logotype.url
      - src: logotype.path
    query_params
    - conditions
      - id_!f: ~logotype.id
      - id_in_begin: in (
      - id_in_!,
        - 0_!v: twitter_classic
        - 1_!v: facebook_classic
        - 2_!v: instagram_classic
      - id_in_end: )
    fields
    - logotype.title
        type: field
        entity_name: logotype
        entity_field_name: title
        is_apply_translation: true
    - logotype.url
        type: field
        entity_name: logotype
        entity_field_name: url
    - logotype.path
        type: field
        entity_name: logotype
        entity_field_name: path