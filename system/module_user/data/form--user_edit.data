forms
- user_edit|form
    attributes
    - id: user_edit
    - enctype: multipart/form-data
    - method: post
    - novalidate: true
    children
    - credentials|fieldset
        title: Credentials
        children
        - email|field_email
        - nick|field_nick
        - avatar|field_file
            title: Avatar
            max_file_size: 10K
            max_files_number: 1
            upload_dir: avatar/
            fixed_name: avatar-%%_nick
            allowed_types
            - =: gif
            - =: jpeg
            - =: jpg
            - =: png
            element_attributes
            - name: avatar
        - timezone|field_timezone
        - password_new|field_password
            title: New password
            description: Leave the field blank if you do not want to change its value.
            element_attributes
            - name: password_new
            - required: false
        - password|field_password
    - button_save|button
        title: save
        attributes
        - value: save
    - button_cancel|button
        title: cancel
        novalidate: true
        attributes
        - value: cancel