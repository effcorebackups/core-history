forms
- registration|form
    attributes
    - id: registration
    - method: post
    - =: novalidate
    children
    - credentials|fieldset
        title: Credentials
        children
        - email|field_email
        - nick|field_text
            title: Nick
            element_attributes
            - name: nick
            - minlength: 4
            - maxlength: 32
        - password|field_password
        - session_params|group_checkboxes
            element_attributes
            - name: session_params[]
            values
            - remember: remember me
            - fixed_ip: on this ip
            checked
            - =: remember
            - =: fixed_ip
        - captcha|field_captcha
    - button_register|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: register
        children
        - label|text
            text: register