forms
- user_edit|form
    attributes
    - id: user_edit
    - enctype: multipart/form-data
    - method: post
    - =: novalidate
    children
    - credentials|fieldset
        title: Credentials
        children
        - email|field_email
        - nick|field_text
            title: Nick
            element_attributes
            - name: nick
            - minlength: 4
            - maxlength: 32
        - avatar|field_file
            title: Avatar
            max_file_size: 10K
            max_files_number: 1
            upload_dir: avatar/
            fixed_name: avatar-%%_id_user
            allowed_types
            - =: gif
            - =: jpeg
            - =: jpg
            - =: png
            element_attributes
            - name: avatar
        - password_new|field_password
            title: New password
            description: Leave the field blank if you do not want to change its value.
            element_attributes
            - name: password_new
            - required: null
        - password|field_password
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel