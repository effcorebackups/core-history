forms
- user_edit|form
    attributes
    - id: user_edit
    - novalidate: novalidate
    - enctype: multipart/form-data
    - method: post
    children
    - credentials|container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - email|field_email
        - nick|field_text
            title: Nick
            element_attributes
            - name: nick
            - minlength: 4
            - maxlength: 32
        - avatar|field_file
            title: Avatar
            max_file_size: 10K
            upload_dir: avatar/
            fixed_name: %%_id_user
            allowed_types
            - gif: gif
            - jpeg: jpeg
            - jpg: jpg
            - png: png
            element_attributes
            - name: avatar
        - password_new|field_password
            title: New password
            description: Leave the field blank if you do not want to change its value.
            element_attributes
            - name: password_new
            - required: null
        - password|field_password
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel