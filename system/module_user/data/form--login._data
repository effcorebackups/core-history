forms
- login|form
    attributes
    - id: login
    - method: post
    - =: novalidate
    children
    - credentials|fieldset
        title: Credentials
        children
        - email|field_email
        - password|field_password
        - session_params|group_checkboxes
            element_attributes
            - name: session_params[]
            values
            - remember: remember me
            - fixed_ip: on this ip
            checked
            - =: remember
            - =: fixed_ip
        - captcha|field_captcha
    - button_login|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: login
        children
        - label|text
            text: login