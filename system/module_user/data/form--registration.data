forms
- registration|form
    attributes
    - id: registration
    - method: post
    - novalidate: true
    children
    - credentials|fieldset
        children
        - email|field_email
            entity_name: user
            entity_field_name: email
            is_validate_uniqueness: true
        - nickname|field_nickname
            entity_name: user
            entity_field_name: nickname
            is_validate_uniqueness: true
        - password|field_password
        - timezone|field_timezone
            element_attributes
            - data-source: uagent-timezone
        - session_params|group_switchers
            element_attributes
            - name: session_params[]
            values
            - is_remember: long session
            - is_fixed_ip: on this ip
            checked
            - =: is_remember
            - =: is_fixed_ip
        - captcha|form_plugin
            name: field_captcha
    - button_register|button
        title: register
        attributes
        - value: register
        weight: -500