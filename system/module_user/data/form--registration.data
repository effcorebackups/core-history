forms
- registration|form
    attributes
    - id: registration
    - method: post
    - =: novalidate
    children
    - credentials|fieldset
        title: Credentials
        children
        - email|field_email
        - nick|field_nick
        - password|field_password
        - timezone|field_timezone
            element_attributes
            - data-source: uagent-timezone
        - session_params|group_switchers
            element_attributes
            - name: session_params[]
            values
            - is_remember: remember me
            - is_fixed_ip: on this ip
            checked
            - =: is_remember
            - =: is_fixed_ip
        - captcha|pluggable_class
            name: field_captcha
    - button_register|button
        title: register
        attributes
        - value: register