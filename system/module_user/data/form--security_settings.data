forms
- security_settings|form
    attributes
    - id: security_settings
    - method: post
    - novalidate: true
    children
    - main|fieldset
        children
        - login_attempts|field_number
            title: Number of login attempts
            element_attributes
            - name: number
            - min: 1
            - max: 100
            - value: 5
        - blocked_until|field_number
            title: Blocking the login for the number of minutes
            description|text_multiline
              text
              - 0: After exceeding the "Number of login attempts" value, the login will be blocked for the specified time.
              - 1: Blocking will not affect existing sessions.
            element_attributes
            - name: blocked_until
            - min: 1
            - max: 10000
            - value: 5
        - session_duration_min|field_number
            title: Session duration when the "remember me" option was not selected (in days)
            element_attributes
            - name: session_duration_min
            - min: 1
            - max: 365
            - value: 1
        - session_duration_max|field_number
            title: Session duration when the "remember me" option was selected (in days)
            element_attributes
            - name: session_duration_max
            - min: 1
            - max: 365
            - value: 30
    - button_save|button
        title: save
        attributes
        - value: save
        - disabled: true
        weight: -500