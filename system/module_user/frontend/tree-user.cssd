
  /* menu 'User': icons */

  [data-area-id='system'] [role='tree'][data-id^='user']                  li[data-id='anonymous' ] > a {padding-left: 77px; background-image: url('pictures/avatar-anonymous.svg'  ); background-repeat: no-repeat; background-position: 8px 50%}
  [data-area-id='system'] [role='tree'][data-id^='user']                  li[data-id='registered'] > a {padding-left: 77px; background-image: url('pictures/avatar-registered.svgd'); background-repeat: no-repeat; background-position: 8px 50%}
  [data-area-id='system'] [role='tree'][data-id^='user'][data-has-avatar] li[data-id='registered'] > a {padding-left: 77px; background-image: url('/%%_avatar_path?thumb=small'    ); background-repeat: no-repeat; background-position: 8px 50%; background-size: 48px 48px}
