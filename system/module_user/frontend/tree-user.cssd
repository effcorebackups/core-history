
  /* dropdown menu 'user': icons */

                         [role='tree'][data-style~='dropdown'][data-id^='user'] li[data-id^='anonymous' ] > a {padding-left: 77px; background-image: url('pictures/avatar-anonymous.svg'  ); background-repeat: no-repeat; background-position: 8px 50%}
                         [role='tree'][data-style~='dropdown'][data-id^='user'] li[data-id^='registered'] > a {padding-left: 77px; background-image: url('pictures/avatar-registered.svgd'); background-repeat: no-repeat; background-position: 8px 50%}
  [data-user-has-avatar] [role='tree'][data-style~='dropdown'][data-id^='user'] li[data-id^='registered'] > a {padding-left: 77px; background-image: url('/%%_avatar_path?thumb=small'    ); background-repeat: no-repeat; background-position: 8px 50%; background-size: 48px 48px}
