forms
- locales|form
    attributes
    - id: locales
    - method: post
    - novalidate: true
    children
    - settings|fieldset
        title: Settings
        children
        - language|field_language
        - timezone_server|field_timezone
            title: Server time zone
            element_attributes
            - name: timezone_server
            - disabled: true
        - format_date|field_text
            title: Date format
            description|text
              text: Examples: %%_examples
              args
              - examples: "Y-m-d" | "d.m.Y"
            element_attributes
            - name: format_date
            - value: Y-m-d
            - minlength: 3
            - maxlength: 100
        - format_time|field_text
            title: Time format
            element_attributes
            - name: format_time
            - value: H:i:s
            - minlength: 3
            - maxlength: 100
        - format_datetime|field_text
            title: Date/time format
            description|text
              text: Examples: %%_examples
              args
              - examples: "Y-m-d H:i:s" | "d.m.Y H:i:s"
            element_attributes
            - name: format_datetime
            - value: Y-m-d H:i:s
            - minlength: 3
            - maxlength: 100
        - decimal_point|field_text
            title: Decimal point
            description|text
              text: Examples: %%_examples
              args
              - examples: "." | ","
            element_attributes
            - name: decimal_point
            - size: 1
            - minlength: 0
            - maxlength: 1
            - value: .
        - thousands_separator|field_text
            title: Thousands separator
            description|text
              text: Examples: %%_examples
              args
              - examples: "" | " "
            element_attributes
            - name: thousands_separator
            - size: 1
            - minlength: 0
            - maxlength: 1
            - required: false
    - button_save|button
        title: save
        attributes
        - value: save
    - button_reset|button
        title: reset
        break_on_validate: true
        attributes
        - value: reset