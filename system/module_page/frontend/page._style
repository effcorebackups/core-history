

  body {
    margin: 0;
    padding: 0 40px;
    font-family: 'Arial';
    font-size: 15px;
    line-height: 1.5em;
    color: %%_color;
    background: white}

  /* page sizes */
  x-head {display: block; max-width: 800px; margin: 18px auto 0 auto}
  x-body {display: block; max-width: 800px; margin: 0 auto; min-height: 200px}

  /* headers */
  h1 {margin: 4em auto 3em auto; font-size: 2em;   line-height: 1.5em; font-weight: normal; display: block; max-width: 800px}
  h2 {margin: 3em auto 2em auto; font-size: 1.5em; line-height: 1.5em; font-weight: normal}
  h3 {margin: 2em auto 1em auto; font-size: 1em}

  /* links */
  a        {color: %%_color_bg}
  a:hover  {color: black}
  a.active {color: black}

  /* universal classes */
  .hidden {display: none}

  /* table */
  x-body table {border-collapse: collapse; width: 100%; margin: 20px 0}
  x-body table thead {border-bottom: 5px solid %%_color_bg}
  x-body table thead th {padding: 12px 15px; font-weight: normal; font-size: 1.2em; text-align: left}
  x-body table tbody {background: white}
  x-body table td {padding: 12px 15px}
  x-body table tr:nth-child(even) td {background-color: %%_color_table_even_bg}
  x-body table tr:nth-last-child(1) td {border-bottom: 1px solid %%_color_border}
  x-body table tr td:empty {color: %%_color_table_noitems}
  x-body table tr td:empty:after {content: "%%_text_no_items"}
  x-body table td.actions {font-size: .85em; vertical-align: top; text-align: right}

  /* messages */
  x-messages {display: block; margin: 50px auto}
  x-messages ul {margin: 10px 0; padding: 15px 20px; font-size: 16px; background-color: gray; color: white}
  x-messages ul.notice  {background-color: gray}
  x-messages ul.ok      {background-color: %%_color_ok}
  x-messages ul.warning {background-color: %%_color_warning}
  x-messages ul.error   {background-color: %%_color_error}
  x-messages ul li {margin: 0 0 0 15px; padding: 0}
  x-messages ul li:only-child {margin: 0; list-style: none}
  x-messages a {color: white}

  /* blocks */
  x-block {display: block}

  x-block.logo a.to_front {
    display: block;
    width: 150px;
    height: 48px;
    background: url('images/logo._vector')}

  x-block.user_menu {float: right}
  x-block.user_menu .avatar {width: 48px; height: 48px; margin: 0 0 0 5px; border: 0; vertical-align: top}
  x-block.user_menu x-tree {display: none; padding: 2px; text-align: right}
  x-block.user_menu x-tree ul,
  x-block.user_menu x-tree li {list-style: none; margin: 0; padding: 0}
  x-block.user_menu:hover x-tree {display: inline-block}

  x-block.modules_admin td.state {vertical-align: top}

  /* control elements */
  x-actions-control {display: block}
  x-actions-control x-title {display: block}
  x-actions-control x-action-list {display: block}
  x-actions-control x-action-list x-action {display: block}

  /* pager */
  x-pager {display: block; margin: 30px 0; text-align: center}
  x-pager a {display: inline-block; padding: 3px}

  /* license agreement */
  x-license h1 {margin: 0 0 1em 0; font-size: 1.5em; line-height: 1.2em}
  x-license h2 {margin: 2em 0 1em 0; font-size: 1.2em}

  /* class list */
  .classes-list {font-size: .9em}

  /* file system icons */
  x-file-path {display: inline-block}
  x-file-path x-directory {display: inline-block; padding: 3px 0 3px 32px; margin-right: 10px; cursor: default; background: url('images/icons-file_types._vector') no-repeat}
  x-file-path x-file {display: inline-block; padding: 3px 0 3px 26px; cursor: default; background: url('images/icons-file_types._vector') no-repeat 0 -30px}

  /* menu with targets */
  x-targets {display: block}
  x-targets a {display: inline-block; margin: 2px 5px 2px 0; padding: 5px 10px; border: 1px solid lightgray}
