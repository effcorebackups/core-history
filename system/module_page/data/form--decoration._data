forms
- decoration|form
    attributes
    - id: decoration
    - method: post
    - =: novalidate
    children
    - colors|container
        tag_name: fieldset
        title: Colors
        title_tag_name: legend
        children
        - color_id|group_palette
            title: Color
            attributes
            - =: required
            element_attributes
            - name: color_id
        - color_bg_id|group_palette
            title: Background color
            attributes
            - =: required
            element_attributes
            - name: color_bg_id
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_restore|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: restore
        - =: disabled
        children
        - label|text
            text: restore