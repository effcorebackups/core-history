templates
# ─────────────────────────────────────────────────────────────────────
# type: text
# ─────────────────────────────────────────────────────────────────────
- actions_list
    name: actions_list
    type: text
    data: <%%_tag_name %%_attributes>%%_self%%_children</%%_tag_name>
- audio
    name: audio
    type: text
    data: <audio data-id="%%_id" src="%%_src" %%_attributes></audio>
- block
    name: block
    type: text
    data: <%%_tag_name %%_attributes>%%_extra_t%%_self%%_children%%_extra_b</%%_tag_name>
- container
    name: container
    type: text
    data: <%%_tag_name %%_attributes>%%_self_t%%_description_t%%_children%%_self_b%%_description_b</%%_tag_name>
- content
    name: content
    type: text
    data: %%_children
- gallery
    name: gallery
    type: text
    data: <x-gallery data-id="%%_id" %%_attributes>%%_children</x-gallery>
- gallery_row
    name: gallery_row
    type: text
    data: <x-item data-num="%%_num" data-type="%%_type">%%_children</x-item>
- form
    name: form
    type: text
    data: <%%_tag_name %%_attributes>%%_self%%_children</%%_tag_name>
- picture
    name: picture
    type: text
    data: <a data-id="picture-%%_id" href="%%_url" %%_link_attributes><img data-id="%%_id" src="%%_src" %%_attributes/></a>
- markup_html
    name: markup_html
    type: text
    data: <%%_tag_name %%_attributes>%%_children</%%_tag_name>
- markup_html_simple
    name: markup_html_simple
    type: text
    data: <%%_tag_name %%_attributes>
- markup_xml
    name: markup_xml
    type: text
    data: <%%_tag_name %%_attributes>%%_children</%%_tag_name>
- markup_xml_simple
    name: markup_xml_simple
    type: text
    data: <%%_tag_name %%_attributes />
- text
    name: text
    type: text
    data: <x-text data-id="%%_id" %%_attributes>%%_text</x-text>
- video
    name: video
    type: text
    data: <video data-id="%%_id" src="%%_src" poster="%%_poster" %%_attributes></video>
