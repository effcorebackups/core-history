# ─────────────────────────────────────────────────────────────────────
- page
    name: page
    type: node
    pointers
    - html: html
    - charset: html/children/head/children/meta/children/meta_charset/attributes/charset
    - head_title: html/children/head/children/title/children/content/text
    - head_icons: html/children/head/children/icons
    - head_styles: html/children/head/children/styles
    - head_scripts: html/children/head/children/scripts
    - main_menu: html/children/body/children/main_menu
    - top: html/children/body/children/x_top/children/top
    - title: html/children/body/children/x_body/children/title
    - messages: html/children/body/children/x_body/children/messages
    - tabs: html/children/body/children/x_body/children/tabs
    - content: html/children/body/children/x_body/children/content
    data|node
      children
      - doctype|markup_simple
          tag_name: !DOCTYPE
          attributes
          - html: true
      - html|markup
          tag_name: html
          attributes
          - lang: en
          - dir: ltr
          children
          - head|markup
              tag_name: head
              children
              - meta|node
                  children
                  - meta_charset|markup_simple
                      tag_name: meta
                      attributes
                      - charset: utf-8
              - title|markup
                  tag_name: title
                  children
                  - content|text
                      is_apply_tokens: true
                      text: 
              - icons|node
              - styles|node
              - scripts|node
          - body|markup
              tag_name: body
              children
              - main_menu|node
              - x_top|markup
                  tag_name: x-top
                  children
                  - top|node
              - x_body|markup
                  tag_name: x-body
                  children
                  - title|node
                  - messages|node
                  - tabs|node
                  - content|node