forms
- view_settings|Form
    attributes
    - id: view_settings
    - method: post
    - novalidate: true
    children
    - page|Fieldset
        title: Page
        children
        - width_min|Field_Number
            title: Minimum width
            description|Text_multiline
              text
              - 0: Value in pixels.
              - 1: Leave 0 if you want to use global page size settings.
            element_attributes
            - name: width_min
            - min: 0
            - max: 10000
        - width_max|Field_Number
            title: Maximum width
            description|Text_multiline
              text
              - 0: Value in pixels.
              - 1: Leave 0 if you want to use global page size settings.
            element_attributes
            - name: width_max
            - min: 0
            - max: 10000
        - meta_viewport|Field_Text
            title: META viewport
            element_attributes
            - name: meta_viewport
            - maxlength: 2000
    - button_save|Button
        title: save
        attributes
        - value: save
        weight: -500
    - button_reset|Button
        title: reset
        break_on_request_value_set: true
        break_on_validate: true
        attributes
        - value: reset
        weight: -520