selections
- logotype_main|selection
    id: logotype_main
    title: Main logotype
    template: children
    decorator_params
    - view_type: template
    - template: children
    - template_row: logotype
    - template_row_mapping
      - title: logotype.title
      - url: logotype.url
      - src: logotype.path
    query_params
    - conditions
      - id_!f: ~logotype.id
      - operator: =
      - id_!v: main
    - limit: 1
    fields
    - logotype.title
        type: field
        entity_name: logotype
        entity_field_name: title
    - logotype.url
        type: field
        entity_name: logotype
        entity_field_name: url
    - logotype.path
        type: field
        entity_name: logotype
        entity_field_name: path
- text_welcome|selection
    id: text_welcome
    title: Welcome message
    template: children
    decorator_params
    - view_type: template
    - template: children
    - template_row: text
    - template_row_mapping
      - text: text.text
    query_params
    - conditions
      - id_!f: ~text.id
      - operator: =
      - id_!v: welcome
    - limit: 1
    fields
    - text.text
        type: field
        entity_name: text
        entity_field_name: text