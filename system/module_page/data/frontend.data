frontend
- page_all
    display
      check: url
      where: path
      match: %^.*$%
    favicons
  # icon classic for browsers: Safari, Opera, Chrome, IE 9-11, Edge …
    - icon_32_classic
        file: frontend/images/icon-32.ico
        attributes
        - rel: icon
        - type: image/x-icon
        - sizes: 32x32
  # icon for all modern browsers: Safari, Opera, Chrome, Firefox, IE 11, Edge …
    - icon_32_modern
        file: frontend/images/icon-32.png
        attributes
        - rel: icon
        - type: image/png
        - sizes: 32x32
  # icon for Safari on iPad 1/2
    - icon_apple_76
        file: frontend/images/icon-76.png
        attributes
        - rel: apple-touch-icon
        - type: image/png
        - sizes: 76x76
  # icon for Safari on iPhone
    - icon_apple_120
        file: frontend/images/icon-120.png
        attributes
        - rel: apple-touch-icon
        - type: image/png
        - sizes: 120x120
  # icon for Safari on any iPad
    - icon_apple_152
        file: frontend/images/icon-152.png
        attributes
        - rel: apple-touch-icon
        - type: image/png
        - sizes: 152x152
  # icon for Safari on iPad 3+, iPhone, macOS
    - icon_apple_192
        file: frontend/images/icon-192.png
        attributes
        - rel: apple-touch-icon
        - type: image/png
        - sizes: 192x192
    styles
    - page_style
        file: frontend/page.cssd
        attributes
        - rel: stylesheet
        - media: all
    scripts
    - page_variables
        file: frontend/core.jsd
        weight: 90
        attributes
        - defer: true
    - page_script
        file: frontend/page.js
        weight: 80
        attributes
        - defer: true
- form_all
    display
      check: block
      where: dpath
      match: %^forms/.*$%
    styles
    - form_style
        file: frontend/form.cssd
        attributes
        - rel: stylesheet
        - media: all
    scripts
    - form_script
        file: frontend/form.js
        weight: 70
        attributes
        - defer: true