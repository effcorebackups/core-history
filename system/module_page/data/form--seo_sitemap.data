forms
- seo_sitemap|form
    attributes
    - id: seo_sitemap
    - method: post
    - novalidate: true
    children
    - settings|fieldset
        title: Settings
        children
        - content|field_textarea
            title: Content of the "sitemap.xml" file
            element_attributes
            - data-is-code-editor: true
            - name: content
            - required: false
            - minlength: null
            - maxlength: null
            - rows: 20
        - is_apply_tokens|field_switcher
            title: Apply tokens
            element_attributes
            - name: is_apply_tokens
    - button_save|button
        title: save
        attributes
        - value: save