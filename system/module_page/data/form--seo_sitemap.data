forms
- seo_sitemap|Form
    attributes
    - id: seo_sitemap
    - method: post
    - novalidate: true
    children
    - settings|Fieldset
        children
        - content|Field_Textarea
            title: Content of the "sitemap.xml" file
            description_state: opened
            description|Text
              text: If filled, the file will be available at: %%_page
              args
              - page: <a href="/sitemap.xml" target="_blank">/sitemap.xml</a>
            element_attributes
            - data-style: code-editor
            - name: content
            - required: false
            - minlength: null
            - maxlength: 16777215
            - rows: 20
        - is_apply_tokens|Field_Switcher
            title: Is apply tokens
            element_attributes
            - name: is_apply_tokens
    - button_save|Button
        title: save
        attributes
        - value: save
        weight: -500