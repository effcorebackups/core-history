forms
- locale|form
    attributes
    - id: locale
    - method: post
    - novalidate: true
    children
    - settings|fieldset
        children
        - language|field_select_language
        - timezone_server|field_select_timezone
            title: Server time zone
            element_attributes
            - name: timezone_server
            - disabled: true
        - format_date|field_text
            title: Date format
            description|text_multiline
              text
              - 0: Examples: %%_examples
              - 1: Possible options can be seen on page: %%_page
              args
              - examples: "Y-m-d" | "d.m.Y"
              - page: <a href="https://php.net/manual/datetime.format.php" target="_blank">https://php.net/manual/datetime.format.php</a>
            element_attributes
            - name: format_date
            - value: Y-m-d
            - minlength: 3
            - maxlength: 100
        - format_time|field_text
            title: Time format
            description|text_multiline
              text
              - 0: Examples: %%_examples
              - 1: Possible options can be seen on page: %%_page
              args
              - examples: "H:i:s"
              - page: <a href="https://php.net/manual/datetime.format.php" target="_blank">https://php.net/manual/datetime.format.php</a>
            element_attributes
            - name: format_time
            - value: H:i:s
            - minlength: 3
            - maxlength: 100
        - format_datetime|field_text
            title: Date/time format
            description|text_multiline
              text
              - 0: Examples: %%_examples
              - 1: Possible options can be seen on page: %%_page
              args
              - examples: "Y-m-d H:i:s" | "d.m.Y H:i:s"
              - page: <a href="https://php.net/manual/datetime.format.php" target="_blank">https://php.net/manual/datetime.format.php</a>
            element_attributes
            - name: format_datetime
            - value: Y-m-d H:i:s
            - minlength: 3
            - maxlength: 100
        - decimal_point|field_text
            title: Decimal point
            description|text
              text: Examples: %%_examples
              args
              - examples: "." | ","
            element_attributes
            - name: decimal_point
            - size: 1
            - minlength: null
            - maxlength: 1
            - value: .
        - thousands_separator|field_text
            title: Thousands separator
            description|text
              text: Examples: %%_examples
              args
              - examples: "" | "â€¯" | " " | "'"
            element_attributes
            - name: thousands_separator
            - size: 1
            - minlength: null
            - maxlength: 1
            - required: null
    - button_save|button
        title: save
        attributes
        - value: save
        weight: -500
    - button_reset|button
        title: reset
        break_on_request_value_set: true
        break_on_validate: true
        attributes
        - value: reset
        weight: -520