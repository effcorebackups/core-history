# note:
# ─────────────────────────────────────────────────────────────────────
# 1. attribute MULTIPLE in SELECT element is not supported on touch
#    devices - tablets, phones, monitors with touch screens
# 2. not recommend to use DISABLED|READONLY text fields with shared
#    NAME (name="shared_name[]") because user can delete DISABLED|READONLY
#    state from field and change the field VALUE and submit the form - after
#    this action the new VALUE will be setted to the next field with
#    shared NAME.
#    example (default form state):
#    - input[type=text,name=shared_name[],value=1,disabled|readonly]
#    - input[type=text,name=shared_name[],value=2]
#    - input[type=text,name=shared_name[],value=3]
#    example (user made a fake changes):
#    - input[type=text,name=shared_name[],value=fake_value]
#    - input[type=text,name=shared_name[],value=2]
#    - input[type=text,name=shared_name[],value=3]
#    example (result form state after validate):
#    - input[type=text,name=shared_name[],value=1,disabled|readonly]
#    - input[type=text,name=shared_name[],value=fake_value]
#    - input[type=text,name=shared_name[],value=2]
# 3. if you used more than 1 element with attribute MULTIPLE and shared
#    NAME (name="shared_name[]"), after submit you will get merged
#    arrays of values.
#    example (result form state before validate):
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2]
#      - option[value=3]
#    - select[name=shared_name[],multiple]
#      - option[value=1]
#      - option[value=2,selected]
#      - option[value=3]
#    example (result form state after validate):
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2,selected]
#      - option[value=3]
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2,selected]
#      - option[value=3]
# ─────────────────────────────────────────────────────────────────────
forms
- demo|form
    attributes
    - id: demo
    - novalidate: novalidate
    - enctype: multipart/form-data
    - method: post
    children
    - form_elements|container
        tag_name: fieldset
        title: Form elements
        title_tag_name: legend
        children
      # field file
        - file|field_file
            title: File (field_file)
            max_file_size: 10K
            upload_dir: demo/
            allowed_types
            - gif: gif
            - jpeg: jpeg
            - jpg: jpg
            - png: png
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="file"&gt;
            element_attributes
            - name: file[]
            - multiple: multiple
      # field text
        - text|field_text
            title: Text (field_text)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="text"&gt;
            element_attributes
            - name: text
            - value: text in input
            - minlength: 5
            - pattern: %^[a-zA-Z0-9 ]+$%
      # field password
        - password|field_password
            title: Password (field_password)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="password"&gt;
            element_attributes
            - name: password
            - value: text in password
      # field search
        - search|field_search
            title: Search (field_search)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="search"&gt;
            element_attributes
            - name: search
            - value: text in search
      # field url
        - url|field_url
            title: URL (field_url)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="url"&gt;
            element_attributes
            - name: url
            - value: http://example.com
      # field phone
        - phone|field_phone
            title: Phone (field_phone)
            description|text
              text: Use international format of mobile phone numbers.
            element_attributes
            - name: phone
            - value: &#43;000112334455
      # field email
        - email|field_email
            title: EMail (field_email)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="email"&gt;
            element_attributes
            - name: email
            - value: test1@example.com,test2@example.com
            - multiple: multiple
      # field number
        - number|field_number
            title: Number (field_number)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="number"&gt;
            element_attributes
            - name: number
            - min: -1000
            - max: +1000
            - step: 0.2
      # field range
        - range|field_range
            title: Range (field_range)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="range"&gt;
            element_attributes
            - name: range
            - min: -1
            - max: +1
            - step: 0.2
      # field date
        - date|field_date
            title: Date (field_date)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="date"&gt;
            element_attributes
            - name: date
            - value: 2020-01-01
      # field time
        - time|field_time
            title: Time (field_time)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="time"&gt;
            element_attributes
            - name: time
            - value: 01:23:45
      # field select timezone
        - select_timezone|field_timezone
            title: Timezone (field_timezone)
            element_attributes
            - name: select_timezone
            - required: required
            selected
            - 424: 424
      # field color
        - color|field_color
            title: Color (field_color)
            element_attributes
            - name: color
            - value: #ffffff
      # field textarea
        - textarea|field_textarea
            title: Textarea (field_textarea)
            description|text
              text: Element %%_info.
              args
              - info: &lt;textarea&gt;&lt;/textarea&gt;
            element_attributes
            - name: textarea_macro
            - value: text in textarea
      # field select
        - select|field_select
            title: Selection list (field_select)
            description|text
              text: Element %%_info.
              args
              - info: &lt;select&gt;
            element_attributes
            - name: select
            values
            - not_selected: - select -
            - option_1: Option 1 (selected)
            - option_2: Option 2 (disabled)
            - option_3: Option 3
            - group_1
                title: Group 1
                values
                - option_4: Option 4
            selected
            - option_1: option_1
            disabled
            - option_2: option_2
        # ─────────────────────────────────────────────────────────────────────
        # checkboxes
        # ─────────────────────────────────────────────────────────────────────
        - checkboxes_all|container
            tag_name: fieldset
            title: Checkboxes
            title_tag_name: legend
            children
          # field checkbox
            - checkbox|field_checkbox
                title: Checkbox (field_checkbox)
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;checkbox&gt;
                element_attributes
                - name: checkbox
                - value: checkbox
                - checked: checked
          # field checkboxes
            - checkboxes|group_checkboxes
                title: Checkboxes (group_checkboxes)
                description|text
                  text: Elements %%_info.
                  args
                  - info: &lt;input type="checkbox"&gt;
                element_attributes
                - name: checkboxes[]
                values
                - checkboxes_1: Checkbox 1
                - checkboxes_2: Checkbox 2 (checked)
                - checkboxes_3: Checkbox 3 (disabled)
                - checkboxes_4: Checkbox 4 (disabled + checked)
                disabled
                - checkboxes_3: checkboxes_3
                - checkboxes_4: checkboxes_4
                checked
                - checkboxes_2: checkboxes_2
                - checkboxes_4: checkboxes_4
        # ─────────────────────────────────────────────────────────────────────
        # radiobuttons
        # ─────────────────────────────────────────────────────────────────────
        - radiobuttons_all|container
            tag_name: fieldset
            title: Radiobuttons
            title_tag_name: legend
            children
          # field radiobutton
            - radiobutton|field
                title: Radiobutton (field)
                title_position: bottom
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="radio"&gt;
                attributes
                - x-type: radiobutton
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: radiobutton
                    - value: radiobutton_1
                    - checked: checked
            - radiobutton_macro|field_radiobutton
                title: Radiobutton (field_radiobutton)
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="radio"&gt;
                element_attributes
                - name: radiobutton
                - value: radiobutton_2
          # field radiobuttons
            - radiobuttons|container
                tag_name: x-group
                title: Radiobuttons (container)
                description|text
                  text: Elements %%_info.
                  args
                  - info: &lt;input type="radio"&gt;
                attributes
                - x-type: radiobuttons
                children
                - radiobuttons_1|field
                    title: Radiobutton 1
                    title_position: bottom
                    attributes
                    - x-type: radiobutton
                    children
                    - element|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: radiobuttons
                        - value: radiobuttons_1
                - radiobuttons_2|field
                    title: Radiobutton 2 (checked)
                    title_position: bottom
                    attributes
                    - x-type: radiobutton
                    children
                    - element|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: radiobuttons
                        - value: radiobuttons_2
                        - checked: checked
                - radiobuttons_3|field
                    title: Radiobutton 3 (disabled)
                    title_position: bottom
                    attributes
                    - x-type: radiobutton
                    children
                    - element|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: radiobuttons
                        - value: radiobuttons_3
                        - disabled: disabled
          # field radiobuttons macro
            - radiobuttons_macro|group_radiobuttons
                title: Radiobuttons (group_radiobuttons)
                description|text
                  text: Elements %%_info.
                  args
                  - info: &lt;input type="radio"&gt;
                element_attributes
                - name: radiobuttons_macro
                values
                - radiobuttons_macro_1: Radiobutton 1
                - radiobuttons_macro_2: Radiobutton 2 (checked)
                - radiobuttons_macro_3: Radiobutton 3 (disabled)
                disabled
                - radiobuttons_macro_3: radiobuttons_macro_3
                checked
                - radiobuttons_macro_2: radiobuttons_macro_2
          # field radiobuttons color macro
            - palette|group_palette
                title: Color (group_palette)
                element_attributes
                - name: palette_color
