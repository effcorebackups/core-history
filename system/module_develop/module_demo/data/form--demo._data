# note:
# ─────────────────────────────────────────────────────────────────────
# 1. not recommend to use DISABLED|READONLY text fields with shared
#    NAME (name="shared_name[]") because user can delete DISABLED|READONLY
#    state from field and change the field VALUE and submit the form - after
#    this action the new VALUE will be setted to the next field with
#    shared NAME.
#    example (default form state):
#    - input[type=text,name=shared_name[],value=1,disabled|readonly]
#    - input[type=text,name=shared_name[],value=2]
#    - input[type=text,name=shared_name[],value=3]
#    example (user made a fake changes):
#    - input[type=text,name=shared_name[],value=fake_value]
#    - input[type=text,name=shared_name[],value=2]
#    - input[type=text,name=shared_name[],value=3]
#    example (result form state after validate):
#    - input[type=text,name=shared_name[],value=1,disabled|readonly]
#    - input[type=text,name=shared_name[],value=fake_value]
#    - input[type=text,name=shared_name[],value=2]
# 2. if you used more than 1 element with attribute MULTIPLE and shared
#    NAME (name="shared_name[]"), after submit you will get merged
#    arrays of values.
#    example (result form state before validate):
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2]
#      - option[value=3]
#    - select[name=shared_name[],multiple]
#      - option[value=1]
#      - option[value=2,selected]
#      - option[value=3]
#    example (result form state after validate):
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2,selected]
#      - option[value=3]
#    - select[name=shared_name[],multiple]
#      - option[value=1,selected]
#      - option[value=2,selected]
#      - option[value=3]
# ─────────────────────────────────────────────────────────────────────
forms
- demo|form
    attributes
    - id: demo
    - novalidate: novalidate
    - enctype: multipart/form-data
    - method: post
    children
    - form_elements|container
        tag_name: fieldset
        title: Form elements
        title_tag_name: legend
        children
      # field file
        - file|field_file
            title: File
            max_file_size: 10K
            upload_dir: demo/
            description|text
              text: Field %%_type.
              args
              - type: field_file
            allowed_types
            - gif: gif
            - jpeg: jpeg
            - jpg: jpg
            - png: png
            description|text
              text: Field %%_type.
              args
              - type: field_file
            element_attributes
            - name: file[]
            - multiple: multiple
      # field text
        - text|field_text
            title: Text
            description|text
              text: Field %%_type.
              args
              - type: field_text
            element_attributes
            - name: text
            - value: text in input
            - minlength: 5
            - pattern: %^[a-zA-Z0-9 ]+$%
      # field password
        - password|field_password
            title: Password
            description|text
              text: Field %%_type.
              args
              - type: field_password
            element_attributes
            - name: password
            - value: text in password
      # field search
        - search|field_search
            title: Search
            description|text
              text: Field %%_type.
              args
              - type: field_search
            element_attributes
            - name: search
            - value: text in search
      # field url
        - url|field_url
            title: URL
            description|text
              text: Field %%_type.
              args
              - type: field_url
            element_attributes
            - name: url
            - value: http://example.com
      # field phone
        - phone|field_phone
            title: Phone
            description|text_multiline
              text
              - 0: Use international format of mobile phone numbers.
              - 1: Field %%_type.
              args
              - type: field_phone
            element_attributes
            - name: phone
            - value: &#43;000112334455
      # field email
        - email|field_email
            title: EMail
            description|text
              text: Field %%_type.
              args
              - type: field_email
            element_attributes
            - name: email
            - value: test1@example.com,test2@example.com
            - multiple: multiple
      # field number
        - number|field_number
            title: Number
            description|text
              text: Field %%_type.
              args
              - type: field_number
            element_attributes
            - name: number
            - min: -1000
            - max: +1000
            - step: 0.2
      # field range
        - range|field_range
            title: Range
            description|text
              text: Field %%_type.
              args
              - type: field_range
            element_attributes
            - name: range
            - min: -1
            - max: +1
            - step: 0.2
      # field date
        - date|field_date
            title: Date
            description|text
              text: Field %%_type.
              args
              - type: field_date
            element_attributes
            - name: date
            - value: 2020-01-01
      # field time
        - time|field_time
            title: Time
            description|text_multiline
              text
              - 0: If the initial value is not specified, the current value in the UTC time zone will be used.
              - 1: Field %%_type.
              args
              - type: field_time
            element_attributes
            - name: time
            - value: 01:23:45
      # field select timezone
        - select_timezone|field_timezone
            title: Timezone
            description|text
              text: Field %%_type.
              args
              - type: field_timezone
            element_attributes
            - name: select_timezone
            - required: required
            selected
            - 424: 424
      # field color
        - color|field_color
            title: Color
            description|text
              text: Field %%_type.
              args
              - type: field_color
            element_attributes
            - name: color
            - value: #ffffff
      # field textarea
        - textarea|field_textarea
            title: Textarea
            description|text
              text: Field %%_type.
              args
              - type: field_textarea
            element_attributes
            - name: textarea_macro
            - value: text in textarea
      # field select
        - select|field_select
            title: Selection list
            description|text_multiline
              text
              - 0: Attribute "multiple" is not supported on touch devices (tablets, smartphones, monitors with touch screens).
              - 1: Field %%_type.
              args
              - type: field_select
            element_attributes
            - name: select
            values
            - not_selected: - select -
            - option_1: Option 1 (selected)
            - option_2: Option 2 (disabled)
            - option_3: Option 3
            - group_1
                title: Group 1
                values
                - option_4: Option 4
            selected
            - option_1: option_1
            disabled
            - option_2: option_2
        # ─────────────────────────────────────────────────────────────────────
        # checkboxes
        # ─────────────────────────────────────────────────────────────────────
        - checkboxes_all|container
            tag_name: fieldset
            title: Checkboxes
            title_tag_name: legend
            children
          # field checkbox
            - checkbox|field_checkbox
                title: Checkbox
                description|text
                  text: Field %%_type.
                  args
                  - type: field_checkbox
                element_attributes
                - name: checkbox
                - value: checkbox
                - checked: checked
          # field checkboxes
            - checkboxes|group_checkboxes
                title: Checkboxes
                description|text
                  text: Group %%_type.
                  args
                  - type: group_checkboxes
                element_attributes
                - name: checkboxes[]
                values
                - checkboxes_1: Checkbox 1
                - checkboxes_2: Checkbox 2 (checked)
                - checkboxes_3: Checkbox 3 (disabled)
                - checkboxes_4: Checkbox 4 (disabled + checked)
                disabled
                - checkboxes_3: checkboxes_3
                - checkboxes_4: checkboxes_4
                checked
                - checkboxes_2: checkboxes_2
                - checkboxes_4: checkboxes_4
        # ─────────────────────────────────────────────────────────────────────
        # radiobuttons
        # ─────────────────────────────────────────────────────────────────────
        - radiobuttons_all|container
            tag_name: fieldset
            title: Radiobuttons
            title_tag_name: legend
            children
          # field radiobutton
            - radiobutton|field_radiobutton
                title: Radiobutton
                description|text
                  text: Field %%_type.
                  args
                  - type: field_radiobutton
                element_attributes
                - name: radiobutton
                - value: radiobutton
          # field radiobuttons
            - radiobuttons|group_radiobuttons
                title: Radiobuttons
                description|text
                  text: Group %%_type.
                  args
                  - type: group_radiobuttons
                element_attributes
                - name: radiobuttons
                values
                - radiobuttons_1: Radiobutton 1
                - radiobuttons_2: Radiobutton 2 (checked)
                - radiobuttons_3: Radiobutton 3 (disabled)
                disabled
                - radiobuttons_3: radiobuttons_3
                checked
                - radiobuttons_2: radiobuttons_2
          # field radiobuttons color macro
            - palette|group_palette
                title: Color
                description|text
                  text: Group %%_type.
                  args
                  - type: group_palette
                element_attributes
                - name: palette_color
    - button_submit|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: submit
        children
        - label|text
            text: submit
    - button_button|markup
        tag_name: button
        attributes
        - type: button
        - name: button
        - value: button
        children
        - label|text
            text: button
    - button_reset|markup
        tag_name: button
        attributes
        - type: reset
        - name: button
        - value: reset
        children
        - label|text
            text: reset