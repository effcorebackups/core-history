- demo_selection_field_types|selection
    id: demo_selection_field_types
    title: Demonstration of field types for Selection
    decorator_settings
    - view_type: ul
    query_settings
    - join_script
      - with_demo_join
          type: left outer join
          entity_name: demo_join
          entity_field_name: id_data
          on_entity_name: demo_data
          on_entity_field_name: id
    - limit: 1
    fields
    - type_field
        type: field
        entity_name: demo_data
        entity_field_name: id
        title|text
          text: Type "%%_type"
          args
          - type: field
        weight: 950
    - type_join_field
        type: join_field
        entity_name: demo_join
        entity_field_name: email
        title|text
          text: Type "%%_type"
          args
          - type: join_field
        weight: 850
    - type_text_with_translation
        type: text
        title|text
          text: Type "%%_type"
          args
          - type: text + translation
        text: text with translation
        settings
        - filters
          - 500: trim
          - 400: translate
        weight: 750
    - type_text_with_translation_with_token
        type: text
        title|text
          text: Type "%%_type"
          args
          - type: text + translation + token
        text: text with translation and token demo_text = "%%_demo_text"
        settings
        - filters
          - 500: trim
          - 400: translate
          - 300: tokenized
        weight: 650
    - type_text_with_token
        type: text
        title|text
          text: Type "%%_type"
          args
          - type: text + token
        text: text with token demo_text = "%%_demo_text"
        settings
        - filters
          - 500: trim
          - 300: tokenized
        weight: 550
    - type_markup
        type: markup
        title|text
          text: Type "%%_type"
          args
          - type: markup
        markup|markup
          tag_name: span
          children
          - data|text
              text: markup
        weight: 450
    - type_handler
        type: handler
        title|text
          text: Type "%%_type"
          args
          - type: handler
        handler: \effcore\modules\demo\events_selection::demo_handler
        weight: 350
    - type_checkbox
        type: checkbox
        title|text
          text: Type "%%_type"
          args
          - type: checkbox
        settings
        - name: is_checked[]
        weight: 250
- demo_data_join|selection
    id: demo_data_join
