forms
- demo|form
    attributes
    - id: demo
    - enctype: multipart/form-data
    - method: post
    - novalidate: true
    children
    - form_elements|fieldset
        title: Form elements
        children
        - button_default|button_default
            attributes
            - value: send
      # field 'File'
        - file_text|field_file
            upload_dir: demo/
            description|text
              text: Field "%%_title".
              args
              - title: field_file
            element_attributes
            - name: file_text
      # field 'Pictures'
        - file_picture|field_file_picture
            title: Pictures
            min_files_number: 0
            max_files_number: 3
            upload_dir: demo/
            description|text
              text: Field "%%_title".
              args
              - title: field_file_picture
            element_attributes
            - name: file_picture[]
            - multiple: true
            thumbnails_allowed
            - =: small
      # field 'Audio'
        - file_audio|field_file_audio
            title: Audio
            upload_dir: demo/
            description|text
              text: Field "%%_title".
              args
              - title: field_file_audio
            element_attributes
            - name: file_audio[]
      # field 'Video'
        - file_video|field_file_video
            title: Video
            upload_dir: demo/
            description|text
              text: Field "%%_title".
              args
              - title: field_file_video
            element_attributes
            - name: file_video[]
      # widget 'Files'
        - files|widget_files
            title: Files
            upload_dir: demo/
            name_complex: files
            allowed_types
            - =: txt
      # widget 'Pictures'
        - files_pictures|widget_files_pictures
            title: Pictures
            upload_dir: demo/
            name_complex: files_pictures
            allowed_types
            - =: jpg
            - =: jpeg
            - =: png
            - =: gif
            - =: svg
      # field 'Text'
        - text|field_text
            title: Text
            description_state: opened
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: This description is always shown.
              args
              - title: field_text
            element_attributes
            - name: text
            - value: text in input
            - minlength: 5
            - pattern: ^[a-zA-Z0-9 ]+$
      # field 'Password'
        - password|field_password
            title: Password
            description_position: top
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: This description is shown on top.
              args
              - title: field_password
            element_attributes
            - name: password
            - value: text in password
      # field 'Search'
        - search|field_search
            title: Search
            description|text
              text: Field "%%_title".
              args
              - title: field_search
            element_attributes
            - name: search
            - value: text in search
      # field 'URL'
        - url|field_url
            title: URL
            description|text
              text: Field "%%_title".
              args
              - title: field_url
            element_attributes
            - name: url
            - value: http://example.com
          # is_allowed_unicode: false
          # should_be_included
          # - =: protocol
          # - =: domain
          # - =: path
          # - =: query
          # - =: anchor
          # should_be_excluded
          # - =: protocol
          # - =: domain
          # - =: path
          # - =: query
          # - =: anchor
      # field 'Telephone number'
        - tel|field_tel
            title: Telephone number
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: Field value must be represented in the international format of telephone numbers.
              args
              - title: field_tel
            element_attributes
            - name: tel
            - value: &plus;000112334455
      # field 'EMail'
        - email|field_email
            title: EMail
            description|text
              text: Field "%%_title".
              args
              - title: field_email
            element_attributes
            - name: email
            - value: test1@example.com,test2@example.com
            - multiple: true
      # field 'Nickname'
        - nickname|field_nickname
            title: Nickname
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: Field value can contain only the next characters: %%_characters
              args
              - characters: "a-z", "A-Z", "0-9", "_", "-"
              - title: field_nickname
            element_attributes
            - name: nickname
            - value: user
      # field 'Digit' (number)
        - number|field_number
            title: Digit
            description|text
              text: Field "%%_title".
              args
              - title: field_number
            element_attributes
            - name: number
            - min: -1000
            - max: +1000
            - step: 0.2
      # field 'Range'
        - range|field_range
            title: Range
            description|text
              text: Field "%%_title".
              args
              - title: field_range
            element_attributes
            - name: range
            - min: -1
            - max: +1
            - step: 0.2
      # field 'Color'
        - color|field_color
            title: Color
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: The color should be in the format "#abcdef", where "ab" is the value of the red component, "cd" — green and "ef" — blue.
              args
              - title: field_color
            element_attributes
            - name: color
            - value: #ffffff
      # ─────────────────────────────────────────────────────────────────────
      # date/time
      # ─────────────────────────────────────────────────────────────────────
        - date|field_date
            title: Date
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: If the initial value is not specified, the current value will be used.
              args
              - title: field_date
            element_attributes
            - name: date
            - value: 2030-02-01
      # field 'Time'
        - time|field_time
            title: Time
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: If the initial value is not specified, the current value will be used.
              args
              - title: field_time
            element_attributes
            - name: time
            - value: 01:23:45
      # field 'Date/Time'
        - datetime|field_datetime
            title: Date/Time
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: If the initial value is not specified, the current value will be used.
              args
              - title: field_datetime
            element_attributes
            - name: datetime
            - value: 2030-02-01 01:23:45
      # field 'Local Date/Time'
        - datetime_local|field_datetime_local
            title: Local Date/Time
            is_get_utc: true
            is_set_utc: true
            description|text_multiline
              text
              - 0: Field "%%_title".
              - 1: If the initial value is not specified, the current value will be used.
              args
              - title: field_datetime_local
            element_attributes
            - name: datetime_local
            - value: 2030-02-01 01:23:45
      # field 'Time zone'
        - timezone|field_timezone
            title: Time zone
            description|text
              text: Field "%%_title".
              args
              - title: field_timezone
            element_attributes
            - name: timezone
            - required: true
            selected
            - UTC: UTC
      # ─────────────────────────────────────────────────────────────────────
      # select
      # ─────────────────────────────────────────────────────────────────────
        - select|field_select
            title: Selection list
            description|text
              text: Field "%%_title".
              args
              - title: field_select
            element_attributes
            - name: select
            values
            - not_selected: - select -
            - option_1: Option 1 (selected)
            - option_2: Option 2 (disabled)
            - option_3: Option 3
            - group_1
                title: Group 1
                values
                - option_4: Option 4
            selected
            - =: option_1
            disabled
            - =: option_2
        - select_multiple|field_select
            title: Selection list (multiple select)
            description|text
              text: Field "%%_title".
              args
              - title: field_select
            element_attributes
            - name: select_multiple[]
            - multiple: true
            - size: 11
            values
            - option_1: Option 1 (selected)
            - option_2: Option 2 (disabled)
            - option_3: Option 3
            - group_1
                title: Group 1
                values
                - option_4: Option 4
            selected
            - =: option_1
            disabled
            - =: option_2
      # field 'Logic'
        - logic|field_logic
            title: Logic
            description|text
              text: Field "%%_title".
              args
              - title: field_logic
            element_attributes
            - name: logic
            selected
            - 1: 1
      # field 'Relation'
        - relation|field_relation
            title: Relation
            description|text
              text: Field "%%_title".
              args
              - title: field_relation
            related_entity_name: tree_item
            related_entity_field_id_name: id
            related_entity_field_title_name: title
            query_params
            - conditions
              - id_tree_!f: id_tree
              - operator: =
              - id_tree_!v: demo_sql
            - order
              - weight_!f: title
              - type: ASC
            element_attributes
            - name: relation
            selected
            - demo_sql_item_1: demo_sql_item_1
      # field 'Relation' (tree view)
        - relation_tree|field_relation
            title: Relation (tree view)
            description|text
              text: Field "%%_title".
              args
              - title: field_relation
            related_entity_name: tree_item
            related_entity_field_id_name: id
            related_entity_field_id_parent_name: id_parent
            related_entity_field_title_name: title
            query_params
            - conditions
              - id_tree_!f: id_tree
              - operator: =
              - id_tree_!v: demo_sql
            element_attributes
            - name: relation_tree
            selected
            - demo_sql_item_1: demo_sql_item_1
      # field 'Language'
        - language|field_language
            title: Language
            description|text
              text: Field "%%_title".
              args
              - title: field_language
            element_attributes
            - name: lang_code
            selected
            - en: en
      # field 'Text direction'
        - text_direction|field_text_direction
            title: Text direction
            description|text
              text: Field "%%_title".
              args
              - title: text_direction
            element_attributes
            - name: text_direction
            selected
            - ltr: ltr
       # ─────────────────────────────────────────────────────────────────────
       # textarea
       # ─────────────────────────────────────────────────────────────────────
        - textarea|field_textarea
            title: Text area
            description|text
              text: Field "%%_title".
              args
              - title: field_textarea
            element_attributes
            - name: textarea
            - value: text in text area
        # ─────────────────────────────────────────────────────────────────────
        # checkboxes
        # ─────────────────────────────────────────────────────────────────────
        - checkboxes_all|fieldset
            title: Checkboxes
            title_is_visible: 1
            state: opened
            children
          # field 'Checkbox'
            - checkbox|field_checkbox
                title: Checkbox
                description|text
                  text: Field "%%_title".
                  args
                  - title: field_checkbox
                element_attributes
                - name: checkbox
                - value: checkbox
                - checked: true
          # group 'Checkboxes'
            - checkboxes|group_checkboxes
                title: Checkboxes
                required_any: true
                description|text
                  text: Group "%%_title".
                  args
                  - title: group_checkboxes
                element_attributes
                - name: checkboxes[]
                values
                - checkbox_1: Checkbox 1
                - checkbox_2: Checkbox 2 (checked)
                - checkbox_3: Checkbox 3 (disabled)
                - checkbox_4: Checkbox 4 (disabled + checked)
                disabled
                - =: checkbox_3
                - =: checkbox_4
                checked
                - =: checkbox_2
                - =: checkbox_4
          # field 'Switcher'
            - switcher|field_switcher
                title: Switcher
                description|text
                  text: Field "%%_title".
                  args
                  - title: field_switcher
                element_attributes
                - name: switcher
                - checked: true
          # group 'Switchers'
            - switchers|group_switchers
                title: Switchers
                required_any: true
                description|text
                  text: Group "%%_title".
                  args
                  - title: group_switchers
                element_attributes
                - name: switchers[]
                values
                - switcher_1: Switcher 1
                - switcher_2: Switcher 2 (checked)
                - switcher_3: Switcher 3 (disabled)
                - switcher_4: Switcher 4 (disabled + checked)
                disabled
                - =: switcher_3
                - =: switcher_4
                checked
                - =: switcher_2
                - =: switcher_4
          # widget 'Access'
            - access|widget_access
                title: Access
                description|text_multiline
                  text
                  - 0: Widget "%%_title".
                  - 1: Access settings are not applicable if no one role is active!
                  args
                  - title: widget_access
        # ─────────────────────────────────────────────────────────────────────
        # radiobuttons
        # ─────────────────────────────────────────────────────────────────────
        - radiobuttons_all|fieldset
            title: Radiobuttons
            title_is_visible: 1
            state: opened
            children
          # field 'Radiobutton'
            - radiobutton|field_radiobutton
                title: Radiobutton
                description|text
                  text: Field "%%_title".
                  args
                  - title: field_radiobutton
                element_attributes
                - name: radiobutton
                - value: radiobutton
          # group 'Radiobuttons'
            - radiobuttons|group_radiobuttons
                title: Radiobuttons
                required_any: true
                description|text
                  text: Group "%%_title".
                  args
                  - title: group_radiobuttons
                element_attributes
                - name: radiobuttons
                values
                - radiobutton_1: Radiobutton 1
                - radiobutton_2: Radiobutton 2 (checked)
                - radiobutton_3: Radiobutton 3 (disabled)
                disabled
                - =: radiobutton_3
                checked
                - =: radiobutton_2
          # group 'Color' (palette)
            - palette|group_palette
                title: Color
                description|text
                  text: Group "%%_title".
                  args
                  - title: group_palette
                element_attributes
                - name: palette_color
    - hidden|field_hidden
        attributes
        - name: hidden_name
        - value: hidden_value
    - button_send|button
        title: send
        attributes
        - value: send
    - button_reset|button
        title: reset
        break_on_request_value_set: true
        break_on_validate: true
        attributes
        - value: reset