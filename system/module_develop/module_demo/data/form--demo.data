forms
- demo|form
    attributes
    - id: demo
    - enctype: multipart/form-data
    - method: post
    - =: novalidate
    children
    - form_elements|fieldset
        title: Form elements
        children
      # field_file
        - file|field_file
            title: File
            max_file_size: 10K
            min_files_number: 0
            max_files_number: 3
            upload_dir: demo/
            description|text
              text: Field %%_type.
              args
              - type: field_file
            allowed_types
            - =: gif
            - =: jpeg
            - =: jpg
            - =: png
            description|text
              text: Field %%_type.
              args
              - type: field_file
            element_attributes
            - name: file[]
            - =: multiple
      # field_text
        - text|field_text
            title: Text
            description_state: opened
            description|text_multiline
              text
              - 0: This description is always shown.
              - 1: Field %%_type.
              args
              - type: field_text
            element_attributes
            - name: text
            - value: text in input
            - minlength: 5
            - pattern: ^[a-zA-Z0-9 ]+$
      # field_password
        - password|field_password
            title: Password
            description_position: top
            description|text_multiline
              text
              - 0: This description is shown on top.
              - 1: Field %%_type.
              args
              - type: field_password
            element_attributes
            - name: password
            - value: text in password
      # field_search
        - search|field_search
            title: Search
            description|text
              text: Field %%_type.
              args
              - type: field_search
            element_attributes
            - name: search
            - value: text in search
      # field_url
        - url|field_url
            title: URL
            description|text
              text: Field %%_type.
              args
              - type: field_url
            element_attributes
            - name: url
            - value: http://example.com
      # field_phone
        - phone|field_phone
            title: Phone
            description|text_multiline
              text
              - 0: Use international format of mobile phone numbers.
              - 1: Field %%_type.
              args
              - type: field_phone
            element_attributes
            - name: phone
            - value: &#43;000112334455
      # field_email
        - email|field_email
            title: EMail
            description|text
              text: Field %%_type.
              args
              - type: field_email
            element_attributes
            - name: email
            - value: test1@example.com,test2@example.com
            - =: multiple
      # field_nick
        - nick|field_nick
            title: Nick
            description|text
              text: Field %%_type.
              args
              - type: field_nick
            element_attributes
            - name: nick
            - value: user
      # field_number
        - number|field_number
            title: Number
            description|text
              text: Field %%_type.
              args
              - type: field_number
            element_attributes
            - name: number
            - min: -1000
            - max: +1000
            - step: 0.2
      # field_range
        - range|field_range
            title: Range
            description|text
              text: Field %%_type.
              args
              - type: field_range
            element_attributes
            - name: range
            - min: -1
            - max: +1
            - step: 0.2
      # field_color
        - color|field_color
            title: Color
            description|text_multiline
              text
              - 0: The color should be in the format "#abcdef", where "ab" is the value of the red component, "cd" - green and "ef" - blue.
              - 1: Field %%_type.
              args
              - type: field_color
            element_attributes
            - name: color
            - value: #ffffff
      # ─────────────────────────────────────────────────────────────────────
      # date/time
      # ─────────────────────────────────────────────────────────────────────
        - date|field_date
            title: Date
            description|text_multiline
              text
              - 0: If the initial value is not specified, the current value will be used.
              - 1: Field %%_type.
              args
              - type: field_date
            element_attributes
            - name: date
            - value: 2030-02-01
      # field_time
        - time|field_time
            title: Time
            description|text_multiline
              text
              - 0: If the initial value is not specified, the current value will be used.
              - 1: Field %%_type.
              args
              - type: field_time
            element_attributes
            - name: time
            - value: 01:23:45
      # field_datetime_local
        - datetime_local|field_datetime_local
            title: Local Date/Time
            is_return_utc: true
            description|text_multiline
              text
              - 0: If the initial value is not specified, the current value will be used.
              - 1: Field %%_type.
              args
              - type: field_datetime_local
            element_attributes
            - name: datetime_local
            - value: 2030-02-01 01:23:45
      # field_timezone
        - timezone|field_timezone
            title: Timezone
            description|text
              text: Field %%_type.
              args
              - type: field_timezone
            element_attributes
            - name: timezone
            - required: required
            selected
            - UTC: UTC
      # ─────────────────────────────────────────────────────────────────────
      # textarea
      # ─────────────────────────────────────────────────────────────────────
        - textarea|field_textarea
            title: Textarea
            description|text
              text: Field %%_type.
              args
              - type: field_textarea
            element_attributes
            - name: textarea
            - value: text in textarea
      # ─────────────────────────────────────────────────────────────────────
      # select
      # ─────────────────────────────────────────────────────────────────────
        - select|field_select
            title: Selection list
            description|text_multiline
              text
              - 0: Attribute "multiple" is not supported on touch devices (tablets, smartphones, monitors with touch screens).
              - 1: Field %%_type.
              args
              - type: field_select
            element_attributes
            - name: select
            values
            - not_selected: - select -
            - option_1: Option 1 (selected)
            - option_2: Option 2 (disabled)
            - option_3: Option 3
            - group_1
                title: Group 1
                values
                - option_4: Option 4
            selected
            - =: option_1
            disabled
            - =: option_2
        # ─────────────────────────────────────────────────────────────────────
        # checkboxes
        # ─────────────────────────────────────────────────────────────────────
        - checkboxes_all|fieldset
            title: Checkboxes
            state: opened
            children
          # field_checkbox
            - checkbox|field_checkbox
                title: Checkbox
                description|text
                  text: Field %%_type.
                  args
                  - type: field_checkbox
                element_attributes
                - name: checkbox
                - value: checkbox
                - =: checked
          # group_checkboxes
            - checkboxes|group_checkboxes
                title: Checkboxes
                description|text
                  text: Group %%_type.
                  args
                  - type: group_checkboxes
                element_attributes
                - name: checkboxes[]
                values
                - checkboxes_1: Checkbox 1
                - checkboxes_2: Checkbox 2 (checked)
                - checkboxes_3: Checkbox 3 (disabled)
                - checkboxes_4: Checkbox 4 (disabled + checked)
                disabled
                - =: checkboxes_3
                - =: checkboxes_4
                checked
                - =: checkboxes_2
                - =: checkboxes_4
          # field_switcher
            - switcher|field_switcher
                title: Switcher
                description|text
                  text: Field %%_type.
                  args
                  - type: field_switcher
                element_attributes
                - name: switcher
                - value: switcher
                - =: checked
          # group_switchers
            - switchers|group_switchers
                title: Switchers
                description|text
                  text: Group %%_type.
                  args
                  - type: group_switchers
                element_attributes
                - name: switchers[]
                values
                - switcher_1: Switcher 1
                - switcher_2: Switcher 2 (checked)
                - switcher_3: Switcher 3 (disabled)
                - switcher_4: Switcher 4 (disabled + checked)
                disabled
                - =: switcher_3
                - =: switcher_4
                checked
                - =: switcher_2
                - =: switcher_4
        # ─────────────────────────────────────────────────────────────────────
        # radiobuttons
        # ─────────────────────────────────────────────────────────────────────
        - radiobuttons_all|fieldset
            title: Radiobuttons
            state: opened
            children
          # field_radiobutton
            - radiobutton|field_radiobutton
                title: Radiobutton
                description|text
                  text: Field %%_type.
                  args
                  - type: field_radiobutton
                element_attributes
                - name: radiobutton
                - value: radiobutton
          # group_radiobuttons
            - radiobuttons|group_radiobuttons
                title: Radiobuttons
                description|text
                  text: Group %%_type.
                  args
                  - type: group_radiobuttons
                element_attributes
                - name: radiobuttons
                values
                - radiobuttons_1: Radiobutton 1
                - radiobuttons_2: Radiobutton 2 (checked)
                - radiobuttons_3: Radiobutton 3 (disabled)
                disabled
                - =: radiobuttons_3
                checked
                - =: radiobuttons_2
          # group_palette
            - palette|group_palette
                title: Color
                description|text
                  text: Group %%_type.
                  args
                  - type: group_palette
                element_attributes
                - name: palette_color
    - button_submit|button
        title: submit
        attributes
        - value: submit
    - button_reset|button
        title: reset
        attributes
        - value: reset