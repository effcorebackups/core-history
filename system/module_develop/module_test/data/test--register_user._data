tests
- register_user|test
    id: register_user
    title: Register user
    scenario
    - init_captcha|step_request
        url: /user/registration
    - form_submit|step_request
        url: /user/registration
        post
        - form_id: registration
        - validation_id: %%_validation_id
        - email: %%_email_random
        - nick: %%_nick_random
        - password: %%_password_random
        - session_params[0]: remember
        - session_params[1]: fixed_ip
        - captcha: %%_captcha
        - button: register
    - response_check|step_check
        where: subm_errs
        match: 0
        on_success
        - return_result|step_return
            value: 1
        on_failure
        - return_result|step_return
            value: 0