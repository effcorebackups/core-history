selections
- instance_select-tree|selection
    id: instance_select-tree
    decorator_settings
    - view_type: table-dl
    query_settings
    - conditions
      - id_!f: ~tree.id
      - id_operator: =
      - id_!v|text
          is_apply_translation: false
          is_apply_tokens: true
          text: %%_selection__tree__id_context
    fields
    - tree.id
        type: field
        entity_name: tree
        entity_field_name: id
        weight: 400
    - tree.title
        type: field
        entity_name: tree
        entity_field_name: title
        settings
        - filters
          - =: translate
        weight: 380
    - tree.title_is_visible
        type: field
        entity_name: tree
        entity_field_name: title_is_visible
        settings
        - filters
          - =: translate
        weight: 360
    - tree.attributes
        type: field
        entity_name: tree
        entity_field_name: attributes
        filter: \effcore\widget_attributes::complex_value_to_markup
        weight: 340
    - tree.created
        type: field
        entity_name: tree
        entity_field_name: created
        weight: 320
    - tree.updated
        type: field
        entity_name: tree
        entity_field_name: updated
        weight: 300
    - tree.is_embedded
        type: field
        entity_name: tree
        entity_field_name: is_embedded
        settings
        - filters
          - =: translate
        weight: 280
