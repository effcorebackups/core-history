
  x-tree {display: block; position: relative}
  x-tree a[aria-selected      ='true'],
  x-tree a[data-selected-trail='true'] {color: %%_color_link_active}

  /* menu style "main": sizes and orientation */

  x-tree[data-style='main']          {float: left}
  x-tree[data-style='main'] li       {float: left}
  x-tree[data-style='main'] li li    {float: none}
  x-tree[data-style='main'] ul       {float: left}
  x-tree[data-style='main'] ul ul    {float: none}

  x-tree[data-style='main'] ul ul    {position: absolute}
  x-tree[data-style='main'] ul ul ul {position: relative}

  x-tree[data-style='main'] li       {padding: 0; margin: 0; list-style: none; cursor: default}
  x-tree[data-style='main'] ul       {padding: 0; margin: 0}
  x-tree[data-style='main'] ul ul    {padding: 20px}
  x-tree[data-style='main'] ul ul ul {padding: 0 0 0 21px}

  x-tree[data-style='main'] li     a {padding: 21px; display: block}
  x-tree[data-style='main'] li li  a {padding: 0}

  /* menu style "main": dynamic */

  x-tree[data-style='main'] > ul > li       > ul {display: none}
  x-tree[data-style='main'] > ul > li:hover > ul {display: block}

  /* menu style "main": colors */

  x-tree[data-style='main'] ul       {background-color: %%_color_menu}
  x-tree[data-style='main'] ul ul    {background-color: %%_color_menu_active{10,10,10}}
  x-tree[data-style='main'] ul ul ul {background-color: transparent}

  x-tree[data-style='main']              a[aria-selected      ='true'],
  x-tree[data-style='main']              a[data-selected-trail='true'] {color: %%_color_menu_link_active}
  x-tree[data-style='main']              a:not([href])                 {color: %%_color_menu_text !important}
  x-tree[data-style='main']              a                             {color: %%_color_menu_link}
  x-tree[data-style='main']        li    a:hover                       {color: %%_color_menu_link_active; background-color: %%_color_menu_active}
  x-tree[data-style='main']        li li a:hover                       {color: %%_color_menu_link_active; background-color: transparent}
  x-tree[data-style='main'] > ul > li:hover                            {                                  background-color: %%_color_menu_active}

  x-tree[data-style='main'] li    a[aria-selected      ='true'],
  x-tree[data-style='main'] li    a[data-selected-trail='true'] {background-color: %%_color_menu_active{5,5,5}}
  x-tree[data-style='main'] li li a[aria-selected      ='true'],
  x-tree[data-style='main'] li li a[data-selected-trail='true'] {background-color: transparent; color: %%_color_menu_link_active}

  /* menu Main: icons */

  x-tree[data-id='main'] li[data-id='front'  ] > a {padding-left: 64px; background-image: url('images/icons-menu.svgd'); background-repeat: no-repeat; background-position: 0      0; background-color: transparent !important; color: %%_color_menu_link !important}
  x-tree[data-id='main'] li[data-id='manage' ] > a {padding-left: 64px; background-image: url('images/icons-menu.svgd'); background-repeat: no-repeat; background-position: 0  -64px}
  x-tree[data-id='main'] li[data-id='develop'] > a {padding-left: 64px; background-image: url('images/icons-menu.svgd'); background-repeat: no-repeat; background-position: 0 -128px}

  /* menu Main: adaptivity */

  @media screen and (max-width: 600px) {
    x-tree[data-style='main']       {float: none}
    x-tree[data-style='main'] ul    {float: none}
    x-tree[data-style='main'] li    {float: none; display: block}
    x-tree[data-style='main'] ul ul {position: relative}
  }



  /* menu manager */

  x-tree[data-managing_mode] ul,
  x-tree[data-managing_mode] li {margin: 0; padding: 0; list-style: none}
  x-tree[data-managing_mode] li {padding-left: 40px}

  x-tree[data-managing_mode] x-icon {
    float: left;
    position: relative;
    z-index: 100;
    width: 30px;
    height: 44px;
    margin-right: 9px;
    background: url('/system/module_page/frontend/images/icons-44.svgd') no-repeat 50% 0}
  x-tree[data-managing_mode] x-item {display: block; min-height: 44px}
  x-tree[data-managing_mode] x-item-title {margin-right: 1em; font-size: 1.2em; color: %%_color_text}
  x-tree[data-managing_mode] x-item-url {display: block; line-height: 1.4em; color: %%_color_text; opacity: .5}
  x-tree[data-managing_mode] x-item-url em {padding: 0 2px; font-style: normal}

  x-tree[data-managing_mode='simple'] li            {background: url('images/tree-hline.svgd') no-repeat 0 -17px, url('images/tree-vline.svgd') repeat-y         }
  x-tree[data-managing_mode='simple'] li:last-child {background: url('images/tree-hline.svgd') no-repeat 0 -17px, url('images/tree-vline.svgd') no-repeat 0 -63px}
  x-tree[data-managing_mode='simple'] x-item {padding-top: 5px}
  x-tree[data-managing_mode='simple'] x-icon {margin-top:  5px}

  x-tree[data-managing_mode$='draggable'] li                 {background: url('images/tree-hline.svgd') no-repeat 0 -16px, url('images/tree-vline.svgd') repeat-y         }
  x-tree[data-managing_mode$='draggable']      li:last-child {background: url('images/tree-hline.svgd') no-repeat 0 -16px, url('images/tree-vline.svgd') no-repeat 0 -62px}
  x-tree[data-managing_mode$='draggable'] li + li            {background: url('images/tree-hline.svgd') no-repeat 0 -21px, url('images/tree-vline.svgd') repeat-y         }
  x-tree[data-managing_mode$='draggable'] li + li:last-child {background: url('images/tree-hline.svgd') no-repeat 0 -21px, url('images/tree-vline.svgd') no-repeat 0 -67px}
  x-tree[data-managing_mode$='draggable'] x-icon {cursor: move}

  x-tree[data-managing_mode$='draggable']                          x-drop_area                      {display: block; margin-left: -9px}
  x-tree[data-managing_mode$='draggable'][data-drag-active='true'] x-drop_area                      {background: %%_color_warning}
  x-tree[data-managing_mode$='draggable'][data-drag-active='true'] x-drop_area[data-drop-in='true'] {background: %%_color_ok}
  x-tree[data-managing_mode$='draggable'][data-drag-active='true'] x-drop_area[data-type='in'    ]  {height: 44px; width: 39px; position: absolute; z-index: 200; opacity: .5}
  x-tree[data-managing_mode$='draggable']                          x-drop_area[data-type='before']  {height:  5px; margin-bottom: 1px}
  x-tree[data-managing_mode$='draggable']                          x-drop_area[data-type='after' ]  {height:  5px; margin-top:    1px}
  x-tree[data-managing_mode$='draggable'] li + li >                x-drop_area[data-type='before']  {height:  1px; margin-bottom: 0; width: 0}
  x-tree[data-managing_mode$='draggable'] [data-drag-out='true']   x-drop_area {width: 0 !important}
