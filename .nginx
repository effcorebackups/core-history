# before start the nginx server:
# - replace %%_server_name
# - replace %%_root_path
# - check path for "include"

server {
  listen 127.0.0.1:80;
  server_name %%_server_name;
  root %%_root_path;
  rewrite ^(.*)$ /index.php/$1 last;

  location / {
    fastcgi_index index.php;
    fastcgi_pass 127.0.0.1:9000;
    include /etc/nginx/fastcgi.conf;
  }

  location ~ /\..* {
    deny all;
  }
}
