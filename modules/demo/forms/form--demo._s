    - method: post
    - class
      - form-demo: form-demo
    children
    - fieldset_html4|form_container
        tag_name: fieldset
        title: Html 4 elements
        children
      # input_text
        - field_text|form_field
            children
            - default|form_element
                tag_name: input
                title: Text
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="text"&gt;
                attributes
                - type: text
                - name: input_text
                - required: required
                - value: text in input
                - minlength: 5
                - maxlength: 255
                - pattern: [a-zA-Z0-9]+
      # input_password
        - field_password|form_field
