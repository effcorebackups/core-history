forms
- form_demo|form
    attributes
    - id: form_demo
    - novalidate: novalidate
    - method: post
    - class
      - form-demo: form-demo
    children
    - fieldset_html4|form_container
        tag_name: fieldset
        title: Html 4 elements
        children
      # input text
        - field_text|form_field
            children
            - default|form_element
                tag_name: input
                title: Text
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="text"&gt;
                attributes
                - type: text
                - name: input_text
                - required: required
                - value: text in input
                - minlength: 5
                - maxlength: 255
                - pattern: [a-zA-Z0-9]+
      # input password
        - field_password|form_field
            children
            - default|form_element
                tag_name: input
                title: Password
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="password"&gt;
                attributes
                - type: password
                - name: input_password
                - required: required
                - value: text in password
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
      # input file
        - field_file|form_field
            children
            - default|form_element
                tag_name: input
                title: File
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;input type="file"&gt;
                attributes
                - type: file
                - name: input_file
                - accept: image/*,audio/*,video/*
                - multiple: multiple
      # checkboxes
        - field_checkboxes|form_container
            title: Checkboxes
            attributes
            - required: required
            - class
              - boxes: boxes
              - checkboxes: checkboxes
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="checkbox"&gt;
            children
            - field_checkbox_1|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Checkbox 1
                    title_position: right
                    attributes
                    - type: checkbox
                    - name: input_checkbox_1
                    - value: checkbox_1
            - field_checkbox_2|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Checkbox 2
                    title_position: right
                    attributes
                    - type: checkbox
                    - name: input_checkbox_2
                    - value: checkbox_2
            - field_checkbox_3|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Checkbox 3
                    title_position: right
                    attributes
                    - type: checkbox
                    - name: input_checkbox_3
                    - value: checkbox_3
      # radios
        - field_radios|form_container
            title: Radios
            attributes
            - required: required
            - class
              - boxes: boxes
              - radios: radios
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="radio"&gt;
            children
            - field_radio_1|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Radio 1 (disabled)
                    title_position: right
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_1
                    - disabled: disabled
            - field_radio_2|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Radio 2
                    title_position: right
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_2
            - field_radio_3|form_field
                children
                - default|form_element
                    tag_name: input
                    title: Radio 3
                    title_position: right
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_3
      # radios macro
        - field_radios_macro|form_container_radios
            title: Radios (macro)
            attributes
            - name: input_radio_macro
            values
            - radio_4: Radio 4
            - radio_5: Radio 5
            - radio_6: Radio 6
      # radios color macro
        - field_color_macro|form_palette
            title: Color
            name: color
      # select
        - field_select|form_field
            children
            - default|form_element
                tag_name: select
                title: Select
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;select&gt;
                attributes
                - name: select
                - multiple: multiple
                - size: 7
                children
                - option_1|markup
                    tag_name: option
                    attributes
                    - value: option_1
                    children
                    - content|text
                        text: Option 1
                - option_2|markup
                    tag_name: option
                    attributes
                    - value: option_2
                    children
                    - content|text
                        text: Option 2
                - option_3|markup
                    tag_name: option
                    attributes
                    - value: option_3
                    children
                    - content|text
                        text: Option 3
                - optgroup_1|markup
                    tag_name: optgroup
                    attributes
                    - label: Group 1
                    children
                    - option_4|markup
                        tag_name: option
                        attributes
                        - value: option_4
                        children
                        - content|text
                            text: Option 4
                    - option_5|markup
                        tag_name: option
                        attributes
                        - value: option_5
                        children
                        - content|text
                            text: Option 5
                    - option_6|markup
                        tag_name: option
                        attributes
                        - value: option_6
                        children
                        - content|text
                            text: Option 6
      # radios macro
        - field_select_macro|form_field_select
            title: Select (macro)
            attributes
            - name: select_macro
            - multiple: multiple
            - size: 7
            values
            - option_7: Option 7
            - option_8: Option 8
            - option_9: Option 9
            - group_2
                title: Group 2
                values
                - option_10: Option 10
                - option_11: Option 11
                - option_12: Option 12
      # textarea
        - field_textarea|form_field
            children
            - default|form_element
                tag_name: textarea
                title: Textarea
                description|text
                  text: Element %%_info.
                  args
                  - info: &lt;textarea&gt;&lt;/textarea&gt;
                attributes
                - name: textarea
                - rows: 5
                - minlength: 5
                - maxlength: 255
                children
                - content|text
                    text: text in textarea
      # table
        - table|table
            children
            - head|table_head
                children
                - tr|table_head_row
                    children
                    - th_1|table_head_row_cell
                        children
                        - content|text
                            text: th 1
                    - th_2|table_head_row_cell
                        children
                        - content|text
                            text: th 2
                    - th_3|table_head_row_cell
                        children
                        - content|text
                            text: th 3
            - body|table_body
                children
                - tr_1|table_body_row
                    children
                    - td_1|table_body_row_cell
                        children
                        - content|text
                            text: td 1.1
                    - td_2|table_body_row_cell
                        children
                        - content|text
                            text: td 1.2
                    - td_3|table_body_row_cell
                        children
                        - content|text
                            text: td 1.3
                - tr_2|table_body_row
                    children
                    - td_1|table_body_row_cell
                        children
                        - content|text
                            text: td 2.1
                    - td_2|table_body_row_cell
                        children
                        - content|text
                            text: td 2.2
                    - td_3|table_body_row_cell
                        children
                        - content|text
                            text: td 2.3
                - tr_3|table_body_row
                    children
                    - td_1|table_body_row_cell
                        children
                        - content|text
                            text: td 3.1
                    - td_2|table_body_row_cell
                        children
                        - content|text
                            text: td 3.2
                    - td_3|table_body_row_cell
                        children
                        - content|text
                            text: td 3.3
                - tr_4|table_body_row
                    children
                    - td_1|table_body_row_cell
                        attributes
                        - colspan: 3
                        children
                        - content|text
                            text: 
