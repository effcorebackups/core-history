forms
- form_admin_decoration|form
    attributes
    - id: admin_decoration
    - novalidate: novalidate
    - method: post
    - class
      - default: form-admin_decoration
    children
    - fieldset_default|markup
        tag_name: fieldset
        children
        - fieldset_default_legend|markup
            tag_name: legend
            children
            - content|text
                text: Colors
        - field_color|form_container
            title: Color
            attributes
            - class
              - default: palette
        - field_color_bg|form_container
            title: Background color
            attributes
            - class
              - default: palette
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save