forms
- registration|form
    attributes
    - id: registration
    - novalidate: novalidate
    - method: post
    children
    - credentials|form_container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - email|form_field
            title: EMail
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: email
                - required: required
                - minlength: 5
                - maxlength: 64
        - nick|form_field
            title: Nick
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: nick
                - required: required
                - minlength: 4
                - maxlength: 32
        - password|form_field
            title: Password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
        - captcha|form_field_captcha
    - button_register|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: register
        children
        - label|text
            text: register