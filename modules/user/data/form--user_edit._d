form
- user_edit|form
    attributes
    - id: user_edit
    - novalidate: novalidate
    - enctype: multipart/form-data
    - method: post
    children
    - credentials|form_container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - email|form_field
            title: EMail
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: email
                - required: required
                - minlength: 5
                - maxlength: 64
        - nick|form_field
            title: Nick
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: nick
                - required: required
                - minlength: 4
                - maxlength: 32
        - avatar|form_field_file
            title: Avatar
            max_file_size: 10K
            upload_subdir: avatar/
            fixed_name: %%_id_user
            fixed_type: image
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: file
                - name: avatar
                - accept: image/*
        - password_new|form_field
            title: New password
            description: Leave the field blank if you do not want to change its value.
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password_new
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
        - password|form_field
            title: Password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel