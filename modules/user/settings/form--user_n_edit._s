forms
- user_edit|form
    attributes
    - id: user_edit
    - novalidate: novalidate
    - method: post
    - class
      - user: user
      - user-edit: user-edit
    children
    - credentials|form_container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - password_old|form_field
            title: Old password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password_old
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
        - password_new|form_field
            title: New password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password_new
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel