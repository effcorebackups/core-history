forms
- form_user_n_edit|form
    attributes
    - id: user_n_edit
    - novalidate: novalidate
    - method: post
    - class
      - form-user: form-user
    children
    - fieldset_default|form_container
        tag_name: fieldset
        children
        - field_password_old|form_field
            children
            - default|form_element
                tag_name: input
                title: Old password
                attributes
                - type: password
                - name: password_old
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
                - disabled: disabled
        - field_password_new|form_field
            children
            - default|form_element
                tag_name: input
                title: New password
                attributes
                - type: password
                - name: password_new
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
    - button_save|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: save
        children
        - label|text
            text: save
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel