forms
- login|form
    attributes
    - id: login
    - novalidate: novalidate
    - method: post
    children
    - credentials|form_container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - email|form_field
            title: EMail
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: email
                - required: required
                - minlength: 5
                - maxlength: 64
        - password|form_field
            title: Password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
        - is_remember|form_field
            title: remember me
            title_position: bottom
            attributes
            - class
              - boxes: boxes
              - checkboxes: checkboxes
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: checkbox
                - name: is_remember
                - value: 1
                - checked: checked
        - captcha|form_field_captcha
    - button_login|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: login
        children
        - label|text
            text: login