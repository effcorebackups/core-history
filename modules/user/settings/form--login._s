forms
- login|form
    attributes
    - id: login
    - novalidate: novalidate
    - method: post
    children
    - credentials|form_container
        tag_name: fieldset
        title: Credentials
        title_tag_name: legend
        children
        - email|form_field
            title: EMail
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: email
                - required: required
                - minlength: 5
                - maxlength: 64
        - password|form_field
            title: Password
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - required: required
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
        - captcha|captcha
            length: 6
    - button_login|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: login
        children
        - label|text
            text: login