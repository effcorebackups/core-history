forms
- form_installation|form
    attributes
    - id: installation
    - novalidate: novalidate
    - method: post
    children
    - fieldset_default|form_container
        tag_name: fieldset
        title: Storage params
        title_tag_name: legend
        children
      # driver
        - field_driver|form_field_select
            title: Driver
            select_attributes
            - name: driver
            - required: required
            values
            - not_selected: - select -
            - mysql: MySQL
            - pgsql: PostgreSQL
            - sqlte: SQLite
            disabled
            - pgsql: pgsql
            - sqlte: sqlte
      # database name
        - field_database|form_field
            title: Database name
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: database
                - required: required
                - value: main
                - minlength: 1
                - maxlength: 128
                - pattern: [a-zA-Z0-9-_]+
      # host name
        - field_host|form_field
            title: Host name
            description|text
              text: Examples: %%_examples. Allowable characters: %%_chars.
              args
              - examples: 127.0.0.1, example.com
              - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", "." 
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: host
                - required: required
                - value: 127.0.0.1
                - minlength: 1
                - maxlength: 128
                - pattern: [a-zA-Z0-9-_.]+
    - button_install|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: install
        children
        - label|text
            text: install
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel