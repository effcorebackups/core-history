forms
- form_installation|form
    attributes
    - id: installation
    - novalidate: novalidate
    - method: post
    children
    - fieldset_default|form_container
        tag_name: fieldset
        title: Storage params
        title_tag_name: legend
        children
      # driver
        - field_driver|form_field_select
            title: Driver
            select_attributes
            - name: driver
            - required: required
            values
            - not_selected: - select -
            - mysql: MySQL
            - pgsql: PostgreSQL
            - sqlite: SQLite
            disabled
            - sqlite: sqlite
      # database name
        - field_database_name|form_field
            title: Database name
            description|text
              text: Allowable characters: %%_chars.
              args
              - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: database_name
                - required: required
                - value: main
                - minlength: 1
                - maxlength: 128
                - pattern: [a-zA-Z0-9-_]+
      # host name
        - field_host_name|form_field
            title: Host name
            description|text
              text: Allowable characters: %%_chars. Examples: %%_examples.
              args
              - examples: 127.0.0.1, example.com
              - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", "."
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: host_name
                - required: required
                - value: 127.0.0.1
                - minlength: 1
                - maxlength: 253
                - pattern: [a-zA-Z0-9-_.]+
      # user name
        - field_user_name|form_field
            title: User name
            description|text
              text: Allowable characters: %%_chars.
              args
              - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: user_name
                - required: required
                - value: root
                - minlength: 1
                - maxlength: 64
                - pattern: [a-zA-Z0-9-_]+
      # password
        - field_password|form_field
            title: Password
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - maxlength: 255
                - autocomplete: off
    - button_install|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: install
        children
        - label|text
            text: install
    - button_cancel|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: cancel
        children
        - label|text
            text: cancel