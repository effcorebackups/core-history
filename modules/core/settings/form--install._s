forms
- form_installation|form
    attributes
    - id: installation
    - novalidate: novalidate
    - method: post
    children
    - storage|form_container
        tag_name: fieldset
        title: Storage params
        title_tag_name: legend
        children
      # mysql/pgsql
        - default|form_container
            children
          # driver
            - driver|form_container
                attributes
                - class
                  - boxes: boxes
                  - radioboxes: radioboxes
                children
                - mysql|form_field
                    title: MySQL
                    title_position: bottom
                    children
                    - default|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: driver
                        - value: mysql
                - pgsql|form_field
                    title: PostgreSQL
                    title_position: bottom
                    children
                    - default|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: driver
                        - value: pgsql
          # database name
            - database_name|form_field
                title: Database name
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: database_name
                    - required: required
                    - value: main
                    - minlength: 1
                    - maxlength: 128
                    - pattern: [a-zA-Z0-9-_]+
          # host name
            - host_name|form_field
                title: Host name
                description|text
                  text: Allowable characters: %%_chars. Examples: %%_examples.
                  args
                  - examples: 127.0.0.1, example.com
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", "."
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: host_name
                    - required: required
                    - value: 127.0.0.1
                    - minlength: 1
                    - maxlength: 253
                    - pattern: [a-zA-Z0-9-_.]+
          # user name
            - user_name|form_field
                title: User name
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_"
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: user_name
                    - required: required
                    - value: root
                    - minlength: 1
                    - maxlength: 64
                    - pattern: [a-zA-Z0-9-_]+
          # password
            - password|form_field
                title: Password
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: password
                    - name: password
                    - maxlength: 255
                    - autocomplete: off
      # sqlite
        - sqlite|form_container
            children
          # driver
            - driver|form_container
                attributes
                - class
                  - boxes: boxes
                  - radioboxes: radioboxes
                children
                - sqlite|form_field
                    title: SQLite
                    title_position: bottom
                    children
                    - default|markup_simple
                        tag_name: input
                        attributes
                        - type: radio
                        - name: driver
                        - value: sqlite
          # database file path
            - file_path|form_field
                title: Database file path
                description|text
                  text: Allowable characters: %%_chars.
                  args
                  - chars: "a"-"z", "A"-"Z", "0"-"9", "-", "_", ".", "/"
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: text
                    - name: file_path
                    - required: required
                    - value: data/data.sqlite
                    - minlength: 1
                    - maxlength: 255
                    - pattern: [a-zA-Z0-9-_./]+
    - button_install|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: install
        children
        - label|text
            text: install
    - button_to_front|markup
        tag_name: button
        novalidate: true
        attributes
        - type: submit
        - name: button
        - value: to_front
        children
        - label|text
            text: to front