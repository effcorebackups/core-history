forms
- demo|form
    attributes
    - id: demo
    - novalidate: novalidate
    - enctype: multipart/form-data
    - method: post
    children
    - form_elements|form_container
        tag_name: fieldset
        title: Form elements
        title_tag_name: legend
        children
      # field text
        - text|form_field
            title: Text
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="text"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: text
                - required: required
                - value: text in input
                - minlength: 5
                - maxlength: 255
                - pattern: [a-zA-Z0-9]+
      # field password
        - password|form_field
            title: Password
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="password"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: password
                - required: required
                - value: text in password
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
      # field search
        - search|form_field
            title: Search
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="search"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: search
                - name: search
                - required: required
                - value: text in search
                - minlength: 5
                - maxlength: 255
      # field url
        - url|form_field
            title: URL
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="url"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: url
                - name: url
                - required: required
                - value: http://example.com
                - minlength: 5
                - maxlength: 255
      # field telephone
        - tel|form_field
            title: Telephone
            description|text
              text: Use international format of mobile phone numbers.
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: tel
                - name: tel
                - required: required
                - value: &#43;0123456789
                - minlength: 5
                - maxlength: 15
      # field email
        - email|form_field
            title: EMail
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="email"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: email
                - required: required
                - value: test1@example.com,test2@example.com
                - minlength: 5
                - maxlength: 64
                - multiple: multiple
      # field file
        - file|form_field_file
            title: File
            max_file_size: 1536
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="file"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: file
                - name: file[]
                - accept: image/*,audio/*,video/*
                - multiple: multiple
      # field number
        - number|form_field
            title: Number
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="number"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: number
                - name: number
                - required: required
                - value: 0
                - min: -1000
                - max: 1000
                - step: 0.2
      # field range
        - range|form_field
            title: Range
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="range"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: range
                - name: range
                - required: required
                - value: 0
                - min: -1
                - max: 1
                - step: 0.2
      # field date
        - date|form_field
            title: Date
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="date"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: date
                - name: date
                - required: required
                - value: 2020-01-01
                - min: 2000-01-01
                - max: 2050-01-01
      # field time
        - time|form_field
            title: Time
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="time"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: time
                - name: time
                - required: required
                - value: 03:04:00
                - min: 01:02:00
                - max: 05:06:00
                - step: 60
      # field select timezone
        - select_timezone|form_field_select_timezone
            title: Timezone
            select_attributes
            - name: select_timezone
            - required: required
            selected
            - 424: 424
      # field color
        - color|form_field
            title: Color
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="color"&gt;
            children
            - element|markup_simple
                tag_name: input
                attributes
                - type: color
                - name: color
                - value: #ffffff
                - required: required
      # field textarea
        - textarea|form_field
            title: Textarea
            description|text
              text: Element %%_info.
              args
              - info: &lt;textarea&gt;&lt;/textarea&gt;
            children
            - element|markup
                tag_name: textarea
                attributes
                - name: textarea
                - rows: 5
                - minlength: 5
                - maxlength: 255
                - required: required
                children
                - content|text
                    text: text in textarea
      # field select
        - select|form_field
            title: Select
            description|text
              text: Element %%_info.
              args
              - info: &lt;select&gt;
            children
            - element|markup
                tag_name: select
                attributes
                - name: select
                - required: required
                children
                - not_selected|markup
                    tag_name: option
                    attributes
                    - value: 
                    children
                    - label|text
                        text: - select -
                - option_1_1|markup
                    tag_name: option
                    attributes
                    - value: option_1_1
                    - selected: selected
                    children
                    - label|text
                        text: Option 1.1 (selected)
                - option_1_2|markup
                    tag_name: option
                    attributes
                    - value: option_1_2
                    - disabled: disabled
                    children
                    - label|text
                        text: Option 1.2 (disabled)
                - option_1_3|markup
                    tag_name: option
                    attributes
                    - value: option_1_3
                    children
                    - label|text
                        text: Option 1.3
                - group_1_1|markup
                    tag_name: optgroup
                    attributes
                    - label: Group 1.1
                    children
                    - option_1_4|markup
                        tag_name: option
                        attributes
                        - value: option_1_4
                        children
                        - label|text
                            text: Option 1.4
                    - option_1_5|markup
                        tag_name: option
                        attributes
                        - value: option_1_5
                        - disabled: disabled
                        children
                        - label|text
                            text: Option 1.5 (disabled)
                    - option_1_6|markup
                        tag_name: option
                        attributes
                        - value: option_1_6
                        children
                        - label|text
                            text: Option 1.6
      # field select macro
        - select_macro|form_field_select
            title: Select (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;select&gt;
            select_attributes
            - name: select_macro
            - required: required
            values
            - not_selected: - select -
            - option_2_1: Option 2.1 (selected)
            - option_2_2: Option 2.2 (disabled)
            - option_2_3: Option 2.3
            - group_2_1
                title: Group 2.1
                values
                - option_2_4: Option 2.4
            selected
            - option_2_1: option_2_1
            disabled
            - option_2_2: option_2_2
      # field checkboxes
        - checkboxes|form_container
            title: Checkboxes
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="checkbox"&gt;
            attributes
            - required: required
            - class
              - boxes: boxes
              - checkboxes: checkboxes
            children
            - checkbox_1_1|form_field
                title: Checkbox 1.1
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: checkbox_1_1
                    - value: checkbox_1_1
            - checkbox_1_2|form_field
                title: Checkbox 1.2 (checked)
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: checkbox_1_2
                    - value: checkbox_1_2
                    - checked: checked
            - checkbox_1_3|form_field
                title: Checkbox 1.3 (disabled)
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: checkbox_1_3
                    - value: checkbox_1_3
                    - disabled: disabled
            - checkbox_1_4|form_field
                title: Checkbox 1.4 (disabled + checked)
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: checkbox_1_4
                    - value: checkbox_1_4
                    - disabled: disabled
                    - checked: checked
      # field checkboxes macro
        - checkboxes_macro|form_container_checkboxes
            title: Checkboxes (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="checkbox"&gt;
            input_attributes
            - name: checkbox_macro[]
            values
            - checkbox_2_1: Checkbox 2.1
            - checkbox_2_2: Checkbox 2.2 (checked)
            - checkbox_2_3: Checkbox 2.3 (disabled)
            - checkbox_2_4: Checkbox 2.4 (disabled + checked)
            disabled
            - checkbox_2_3: checkbox_2_3
            - checkbox_2_4: checkbox_2_4
            checked
            - checkbox_2_2: checkbox_2_2
            - checkbox_2_4: checkbox_2_4
      # field radios
        - radios|form_container
            title: Radios
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="radio"&gt;
            attributes
            - required: required
            - class
              - boxes: boxes
              - radioboxes: radioboxes
            children
            - radio_1_1|form_field
                title: Radio 1.1
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: radio
                    - value: radio_1_1
            - radio_1_2|form_field
                title: Radio 1.2 (checked)
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: radio
                    - value: radio_1_2
                    - checked: checked
            - radio_1_3|form_field
                title: Radio 1.3 (disabled)
                title_position: bottom
                children
                - element|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: radio
                    - value: radio_1_3
                    - disabled: disabled
      # field radios macro
        - radios_macro|form_container_radios
            title: Radios (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="radio"&gt;
            input_attributes
            - name: radio_macro
            values
            - radio_2_1: Radio 2.1
            - radio_2_2: Radio 2.2 (checked)
            - radio_2_3: Radio 2.3 (disabled)
            disabled
            - radio_2_3: radio_2_3
            checked
            - radio_2_2: radio_2_2
      # field radios color macro
        - color_macro|form_container_palette
            title: Color
            input_attributes
            - name: color
    - button_submit|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: submit
        children
        - label|text
            text: submit
    - button_button|markup
        tag_name: button
        attributes
        - type: button
        - name: button
        - value: button
        children
        - label|text
            text: button
    - button_reset|markup
        tag_name: button
        attributes
        - type: reset
        - name: button
        - value: reset
        children
        - label|text
            text: reset