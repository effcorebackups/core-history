forms
- form_demo|form
    attributes
    - id: form_demo
    - novalidate: novalidate
    - method: post
    - class
      - form-demo: form-demo
    children
    - fieldset_default|form_container
        tag_name: fieldset
        title: Form elements
        title_tag_name: legend
        children
      # input text
        - field_text|form_field
            title: Text
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="text"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: text
                - name: input_text
                - required: required
                - value: text in input
                - minlength: 5
                - maxlength: 255
                - pattern: [a-zA-Z0-9]+
      # input password
        - field_password|form_field
            title: Password
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="password"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: password
                - name: input_password
                - required: required
                - value: text in password
                - minlength: 5
                - maxlength: 255
                - autocomplete: off
      # input search
        - field_search|form_field
            title: Search
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="search"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: search
                - name: input_search
                - required: required
                - value: text in search
                - minlength: 5
                - maxlength: 255
      # input url
        - field_url|form_field
            title: URL
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="url"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: url
                - name: input_url
                - required: required
                - value: http://example.com
                - minlength: 5
                - maxlength: 255
      # input telephone
        - field_tel|form_field
            title: Telephone
            description|text
              text: Use international format of mobile phone numbers.
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: tel
                - name: input_tel
                - required: required
                - value: &#43;0123456789
                - minlength: 5
                - maxlength: 15
      # input email
        - field_email|form_field
            title: EMail
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="email"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: email
                - name: input_email
                - required: required
                - value: test@example.com
                - minlength: 5
                - maxlength: 255
                - multiple: multiple
      # input file
        - field_file|form_field
            title: File
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="file"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: file
                - name: input_file
                - accept: image/*,audio/*,video/*
                - multiple: multiple
      # input number
        - field_number|form_field
            title: Number
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="number"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: number
                - name: input_number
                - required: required
                - value: -2.5
                - min: -5
                - max: 5
                - step: 0.5
      # input range
        - field_range|form_field
            title: Range
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="range"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: range
                - name: input_range
                - value: -2.5
                - min: -5
                - max: 5
                - step: 0.5
      # input date
        - field_date|form_field
            title: Date
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="date"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: date
                - name: input_date
                - required: required
                - value: 2017-12-31
                - min: 2000-12-31
                - max: 2020-12-31
      # input time
        - field_time|form_field
            title: Time
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="time"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: time
                - name: input_time
                - required: required
                - value: 00:00:00
      # input color
        - field_color|form_field
            title: Color
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="color"&gt;
            children
            - default|markup_simple
                tag_name: input
                attributes
                - type: color
                - name: input_color
                - value: #ffffff
      # textarea
        - field_textarea|form_field
            title: Textarea
            description|text
              text: Element %%_info.
              args
              - info: &lt;textarea&gt;&lt;/textarea&gt;
            children
            - default|markup
                tag_name: textarea
                attributes
                - name: textarea
                - rows: 5
                - minlength: 5
                - maxlength: 255
                - required: required
                children
                - content|text
                    text: text in textarea
      # select macro
        - field_select_macro|form_field_select
            title: Select (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;select&gt;
            attributes
            - name: select_macro
            - required: required
            values
            - not_selected: - select -
            - option_1_1: Option 1.1
            - option_1_2: Option 1.2 (disabled)
            - option_1_3: Option 1.3
            - group_1_1
                title: Group 1.1
                values
                - option_1_4: Option 1.4
            selected
            - option_1_1: option_1_1
            disabled
            - option_1_2: option_1_2
      # select multiple macro
        - field_select_multiple_macro|form_field_select
            title: Select multiple (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;select&gt;
            attributes
            - name: select_multiple_macro[]
            - required: required
            - multiple: multiple
            - size: 11
            values
            - option_2_1: Option 2.1
            - option_2_2: Option 2.2 (disabled)
            - option_2_3: Option 2.3
            - group_2_1
                title: Group 2.1
                values
                - option_2_4: Option 2.4
            selected
            - option_2_1: option_2_1
            disabled
            - option_2_2: option_2_2
      # checkboxes
        - group_checkboxes|form_container
            title: Checkboxes
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="checkbox"&gt;
            attributes
            - required: required
            - class
              - boxes: boxes
              - checkboxes: checkboxes
            children
            - field_checkbox_1|form_field
                title: Checkbox 1
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: input_checkbox_1
                    - value: checkbox_1
            - field_checkbox_2|form_field
                title: Checkbox 2
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: input_checkbox_2
                    - value: checkbox_2
            - field_checkbox_3|form_field
                title: Checkbox 3
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: checkbox
                    - name: input_checkbox_3
                    - value: checkbox_3
      # radios
        - group_radios|form_container
            title: Radios
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="radio"&gt;
            attributes
            - required: required
            - class
              - boxes: boxes
              - radios: radios
            children
            - field_radio_1|form_field
                title: Radio 1.1
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_1_1
            - field_radio_2|form_field
                title: Radio 1.2
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_1_2
            - field_radio_3|form_field
                title: Radio 1.3
                title_position: bottom
                children
                - default|markup_simple
                    tag_name: input
                    attributes
                    - type: radio
                    - name: input_radio
                    - value: radio_1_3
      # radios macro
        - field_radios_macro|form_container_radios
            title: Radios (macro)
            description|text
              text: Element %%_info.
              args
              - info: &lt;input type="radio"&gt;
            attributes
            - name: input_radio_macro
            values
            - radio_2_1: Radio 2.1
            - radio_2_2: Radio 2.2
            - radio_2_3: Radio 2.3
      # radios color macro
        - field_color_macro|form_container_palette
            title: Color
            each_name: color
    - button_submit|markup
        tag_name: button
        attributes
        - type: submit
        - name: button
        - value: submit
        children
        - label|text
            text: submit
    - button_button|markup
        tag_name: button
        attributes
        - type: button
        - name: button
        - value: button
        children
        - label|text
            text: button
    - button_reset|markup
        tag_name: button
        attributes
        - type: reset
        - name: button
        - value: reset
        children
        - label|text
            text: reset